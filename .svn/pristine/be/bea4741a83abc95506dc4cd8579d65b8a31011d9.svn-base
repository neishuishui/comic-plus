.cu-scroll-bar {
  width: 100%;
  height: 100%;
  max-width: inherit;
  max-height: inherit;
  position: relative;
  user-select: none;
}

.cu-scroll-bar__container {
  width: 100%;
  height: 100%;
  max-width: inherit;
  max-height: inherit;
  overflow: scroll;
  scrollbar-width: none;
}

.cu-scroll-bar__thumb {
  position: absolute;
  transition: opacity 200ms;
  cursor: pointer;
  z-index: 20;
}
.cu-scroll-bar.hover .cu-scroll-bar__thumb {
  opacity: 0;
}

.cu-scroll-bar__thumb.thumby {
  right: 0;
  top: 0;
  bottom: 0;
  width: 6px;
}
.cu-scroll-bar__thumb.thumbx {
  left: 0;
  right: 0;
  bottom: 0;
  height: 6px;
}

.cu-scroll-bar__thumb::after {
  content: '';
  position: absolute;
  display: block;
  border-radius: 4px;
  background: #a6a8ad;
  opacity: 0.6;
  transition: opacity 200ms;
}
.cu-scroll-bar__thumb.thumby::after {
  top: var(--t);
  height: var(--h);
  width: 100%;
}
.cu-scroll-bar__thumb.thumbx::after {
  left: var(--l);
  height: 100%;
  width: var(--w);
}

.cu-scroll-bar:hover .cu-scroll-bar__thumb {
  opacity: 1;
}

.cu-scroll-bar__thumb:hover::after {
  opacity: 0.8;
}
