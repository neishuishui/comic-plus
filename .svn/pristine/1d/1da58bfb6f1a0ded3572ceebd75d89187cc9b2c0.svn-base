import type { ExtractPropTypes } from "vue";

export const avatarProps = {
  src: String,
  fit: {
    type: String,
    default: 'cover'
  },
  size: {
    type: Number,
    default: 40
  },
  shape: {
    type: String,
    default: 'circle',
    validator: (value: string) => ['circle', 'square'].includes(value)
  },
  color: String
} as const

export type AvatarProps = ExtractPropTypes<typeof avatarProps>

