import type { PropType, ExtractPropTypes } from 'vue';
import type { ComicSize } from '../../type';

export const colorPickerProps = {
  modelValue: {
    type: String,
    required: true,
    default: ''
  },
  alpha: Boolean,
  format: {
    type: String,
    default: (props) => {
      return props.alpha ? 'rgb' : 'hex';
    }
  },
  size: String as PropType<ComicSize>,
  disabled: Boolean,
  predefine: Array as PropType<string[]>
} as const;

export type ColorPickerProps = ExtractPropTypes<typeof colorPickerProps>;

export const colorPickerEmits = {
  ['update:modelValue']: (val: string) => typeof val === 'string',
  change: (val: string) => typeof val === 'string'
};

export type ColorPickerEmits = typeof colorPickerEmits;
