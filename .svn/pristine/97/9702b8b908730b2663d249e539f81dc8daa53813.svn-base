import { computed, defineComponent, h } from 'vue';
import '../style/divider.css';
import { dividerProps, POSITION_ENUM } from './main.props';

export default defineComponent({
  name: 'CuDivider',
  props: dividerProps,
  setup(props, { slots }) {
    const computedStyle = computed(() => {
      return {
        backgroundColor: props.color,
        [props.direction === 'horizontal' ? 'height' : 'width']: props.thickness + 'px',
        justifyContent: POSITION_ENUM[props.contentPosition]
      };
    });

    return () => {
      return h(
        'span',
        { class: ['cu-divider', props.direction, props.type], style: computedStyle.value },
        slots.default && props.direction === 'horizontal' ? h('span', null, slots) : undefined
      );
    };
  }
});
