.cu-mode {
  overflow: hidden;
}
.cu-drawer {
  position: absolute;
  background-color: #fff;
  color: var(--cu-text-color);
  display: flex;
  flex-direction: column;
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.08), 0px 0px 58px rgba(0, 0, 0, 0.16);
}

.cu-drawer.cu-drawer--left {
  left: 0;
  height: 100%;
}

.cu-drawer.cu-drawer--right {
  right: 0;
  height: 100%;
}

.cu-drawer.cu-drawer--top {
  top: 0;
  width: 100%;
}

.cu-drawer.cu-drawer--bottom {
  bottom: 0;
  width: 100%;
}

.cu-drawer__header {
  font-size: 18px;
  display: flex;
  min-height: 42px;
  justify-content: space-between;
  align-items: center;
  padding: 8px 10px;
  border-bottom: 1px solid var(--cu-border-color);
}

.cu-drawer__header .close {
  cursor: pointer;
  font-size: 22px;
}
.cu-drawer__header .close:hover {
  text-shadow: 0 0 2px;
}

.cu-drawer__content {
  flex: 1;
  padding: 10px;
  overflow: auto;
}

.cu-drawer__footer {
  padding: 8px 10px;
  display: flex;
  justify-content: flex-end;
}

.cu-drawer-right-enter-active,
.cu-drawer-right-leave-active,
.cu-drawer-left-enter-active,
.cu-drawer-left-leave-active,
.cu-drawer-top-enter-active,
.cu-drawer-top-leave-active,
.cu-drawer-bottom-enter-active,
.cu-drawer-bottom-leave-active {
  transition: all 300ms;
}

.cu-drawer-right-enter-from,
.cu-drawer-right-leave-to {
  transform: translateX(100%);
}

.cu-drawer-left-enter-from,
.cu-drawer-left-leave-to {
  transform: translateX(-100%);
}

.cu-drawer-top-enter-from,
.cu-drawer-top-leave-to {
  transform: translateY(-100%);
}

.cu-drawer-bottom-enter-from,
.cu-drawer-bottom-leave-to {
  transform: translateY(100%);
}

.comic-plus__is-comic .cu-drawer .cu-drawer__header {
  border-color: var(--cu-comic-border-color);
}
