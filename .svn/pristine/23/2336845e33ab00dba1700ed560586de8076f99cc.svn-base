.cu-tree {
  color: var(--font);
  font-size: 14px;
}

.cu-tree .cu-tree__empty {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: var(--font-light);
  background-color: var(--bgcolor);
}
.cu-tree .tree-icon {
  display: inline-flex;
  width: 24px;
  height: 100%;
  align-items: center;
  justify-content: center;
  transition: all 200ms;
  color: var(--font-light);
}

.cu-tree .tree-icon.unfold {
  transform: rotate(90deg);
}

.cu-tree__content {
  min-height: 24px;
  line-height: 24px;
  display: flex;
  align-items: center;
  cursor: pointer;
  border-radius: calc(var(--border-radius-base) - 1px);
}

.cu-tree__content:hover {
  background-color: var(--bgcolor);
}

.cu-tree__content .checkbox {
  margin-right: 8px;
}

.cu-tree__info {
  display: flex;
  align-items: center;
  flex: 1;
}
.cu-tree__info > .node-icon {
  margin-right: 4px;
}

.cu-tree.unfold-hover .tree-icon:hover {
  color: var(--primary);
}
