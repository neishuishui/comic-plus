import type { ExtractPropTypes } from "vue";

export const drawerProps = {
  modelValue: {
    type: Boolean,
    default: false
  },
  showClose: {
    type: Boolean,
    default: true
  },
  modeClose: {
    type: Boolean,
    default: true
  },
  direction: {
    type: String,
    default: 'right',
    validator: (value: string) => ['left', 'top', 'right', 'bottom'].includes(value)
  },
  toBody: {
    type: Boolean,
    default: true
  },
  header: String,
  dimension: {
    type: String,
    default: '30%'
  },
  color: String,
  beforeClose: Function,
  lockScroll: {
    type: Boolean,
    default: true
  }
} as const

export type DrawerProps = ExtractPropTypes<typeof drawerProps>


export const drawerEmits = {
  ['update:modelValue']: (val: boolean) => typeof val === 'boolean',
  close: () => true,
  open: () => true
}

export type DrawerEmits = typeof drawerEmits