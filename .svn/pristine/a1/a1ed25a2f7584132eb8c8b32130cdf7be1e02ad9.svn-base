.cu-title {
  font-size: 12px;
  position: fixed;
  background-color: #fff;
  color: var(--font);
  padding: 8px;
  left: 0;
  top: 0;
  max-width: 400px;
  border-radius: 4px;
  border: 1px solid var(--border);
  filter: drop-shadow(0 0px 4px rgba(0, 0, 0, 0.12));
}

.cu-title::after {
  position: absolute;
  display: block;
  content: '';
  width: 8px;
  height: 8px;
  background-color: #fff;
  border: 1px solid var(--border);
}

.cu-title.left.start {
  transform: translateX(calc(-100% - 8px));
}
.cu-title.left.center {
  transform: translateX(calc(-100% - 8px)) translateY(-50%);
}
.cu-title.left.end {
  transform: translateX(calc(-100% - 8px)) translateY(-100%);
}

.cu-title.right.start {
  transform: translateX(8px);
}
.cu-title.right.center {
  transform: translateX(8px) translateY(-50%);
}
.cu-title.right.end {
  transform: translateX(8px) translateY(-100%);
}

.cu-title.top.start {
  transform: translateY(calc(-100% - 8px));
}
.cu-title.top.center {
  transform: translateY(calc(-100% - 8px)) translateX(-50%);
}
.cu-title.top.end {
  transform: translateY(calc(-100% - 8px)) translateX(-100%);
}

.cu-title.bottom.start {
  transform: translateY(8px);
}
.cu-title.bottom.center {
  transform: translateY(8px) translateX(-50%);
}
.cu-title.bottom.end {
  transform: translateY(8px) translateX(-100%);
}

.cu-title.left::after {
  right: 0;
  top: 50%;
  transform: translate(50%, -50%) rotate(45deg);
  border-left: 0;
  border-bottom: 0;
}

.cu-title.right::after {
  left: 0;
  top: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  border-right: 0;
  border-top: 0;
}

.cu-title.top::after {
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 50%) rotate(45deg);
  border-left: 0;
  border-top: 0;
}

.cu-title.bottom::after {
  left: 50%;
  top: 0;
  transform: translate(-50%, -50%) rotate(45deg);
  border-right: 0;
  border-bottom: 0;
}

.cu-title.top.end::after,
.cu-title.bottom.end::after {
  left: calc(100% - 12px);
}

.cu-title.top.start::after,
.cu-title.bottom.start::after {
  left: 12px;
}

.cu-title.left.start::after,
.cu-title.right.start::after {
  top: 12px;
}

.cu-title.left.end::after,
.cu-title.right.end::after {
  top: calc(100% - 12px);
}
