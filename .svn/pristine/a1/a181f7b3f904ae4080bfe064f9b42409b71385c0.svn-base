.cu-backtop {
  position: fixed;
}

.cu-backtop__container {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  cursor: pointer;
  width: var(--size);
  height: var(--size);
  border-radius: 4px;
  background-color: #fff;
  border: 1px solid var(--input-border);
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.12), 0 0 6px rgba(0, 0, 0, 0.04);
  transition: all 200ms;
}
.cu-backtop__container:hover {
  color: var(--primary);
}
