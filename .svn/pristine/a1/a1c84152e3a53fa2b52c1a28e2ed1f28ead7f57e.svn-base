.cu-input .cu-input__content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.cu-input .prefix-icon,
.cu-input .suffix-icon {
  position: absolute;
  color: var(--font-light);
  min-width: 14px;
  text-align: center;
}

.cu-input .prefix-icon {
  left: 4px;
}
.cu-input .suffix-icon {
  right: 4px;
}

.cu-input .prefix-slot,
.cu-input .suffix-slot {
  padding: 0 10px;
  height: 100%;
  background-color: var(--bgcolor);
  color: var(--font-light);
  cursor: pointer;
  line-height: inherit;
}
.cu-input .prefix-slot {
  border-right: 1px solid;
  border-color: inherit;
}
.cu-input .suffix-slot {
  border-left: 1px solid;
  border-color: inherit;
}
.cu-input .cu-input__content .clearable {
  margin-right: 2px;
  display: none;
  cursor: pointer;
  color: var(--font-light);
}

.cu-input:hover .cu-input__content .clearable {
  display: inline-block;
}
.cu-input .cu-input__content .cu-input__inner {
  flex: 0 0 auto;
}
