.cu-elevator {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  font-size: 14px;
}

.cu-elevator__container {
  height: 100%;
  overflow: hidden;
}

.cu-elevator__menu {
  position: absolute;
  transition: all 200ms;
  max-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 24;
}
.cu-elevator__menu.menu-fixed {
  position: relative;
  margin-right: 8px;
  justify-content: start;
}

.cu-elevator__menu ul {
  margin: 0;
  padding: 0;
  background-color: #fff;
  border: 1px solid var(--border);
  border-radius: 4px;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.12), 0 0 6px rgba(0, 0, 0, 0.04);
  list-style: none;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow-y: auto;
  flex: 1;
  flex-grow: 0;
}

.cu-elevator__menu.menu-fixed ul {
  box-shadow: none;
  border-radius: 0;
  box-shadow: none;
  border: 0;
  justify-content: start;
}

.cu-elevator__menu ul > li {
  padding: 4px;
  cursor: pointer;
  transition: all 200ms;
  font-size: 12px;
  width: var(--size);
  text-align: center;
  list-style: none;
  box-sizing: border-box;
}
.cu-elevator__menu li:last-child {
  margin: 0;
  border: 0;
}

.cu-elevator__menu li:hover,
.cu-elevator__menu li.is-active {
  color: var(--primary);
}

.cu-elevator__menu .fold {
  margin-top: 4px;
  width: var(--size);
  height: var(--size);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  cursor: pointer;
  background-color: #fff;
  border: 1px solid var(--border);
  border-radius: 4px;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.12), 0 0 6px rgba(0, 0, 0, 0.04);
  transition: color 200ms;
}

.cu-elevator__menu .fold:hover {
  color: var(--primary);
}
