import { ExtractPropTypes, PropType } from 'vue';
import { tableProps, type TableData } from '../main.props';

export const tableRowProps = {
  columnData: Object as PropType<TableData>,
  checkList: Array as PropType<TableData[]>,
  index: Number,
  calcPaddingLeft: {
    type: Number,
    default: 20
  },
  show: {
    type: Boolean,
    default: true
  },
  ...tableProps
} as const;

export type TableRowProps = ExtractPropTypes<typeof tableRowProps>;

export const tableRowEmits = {
  'change-selection': (check: boolean, row: TableData) => true,
  'add-option': (rows: TableData[]) => true
};

export type TableRowEmits = typeof tableRowEmits;
