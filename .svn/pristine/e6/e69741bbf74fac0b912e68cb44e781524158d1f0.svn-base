.cu-checkbox {
  display: inline-block;
  vertical-align: middle;
  cursor: pointer;
  font-size: 14px;
  margin-right: 10px;
  color: var(--font);
  --color: var(--active-color, var(--primary));
}
.cu-checkbox.is-disabled {
  opacity: 0.6;
  cursor: no-drop;
}

.cu-checkbox:not(.is-disabled):hover {
  color: var(--color);
}
.cu-checkbox:not(.is-disabled):hover .cu-checkbox__inner {
  border-color: var(--color);
}

.cu-checkbox input:not(:disabled):active ~ .cu-checkbox__inner {
  transform: scale(0.9);
}
.cu-checkbox input:checked ~ .cu-checkbox__inner,
.cu-checkbox__inner.ispart {
  background-color: var(--color);
  border-color: var(--color);
}
.cu-checkbox input:checked ~ .cu-checkbox__label {
  color: var(--color);
}

.cu-checkbox__inner {
  margin-right: 4px;
  display: inline-block;
  width: 16px;
  height: 16px;
  border-radius: 4px;
  text-align: center;
  border: 1px solid var(--border);
  color: #fff;
  position: relative;
}
.cu-checkbox__inner i {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 12px;
  line-height: 1;
  text-align: center;
}

.cu-checkbox-group {
  display: inline-flex;
  flex-wrap: wrap;
}

.cu-table .cu-table__th.checkbox .cu-checkbox,
.cu-table .cu-table__td.checkbox .cu-checkbox,
.cu-table .cu-table__th.checkbox .cu-checkbox .cu-checkbox__inner,
.cu-table .cu-table__td.checkbox .cu-checkbox .cu-checkbox__inner {
  margin: 0;
}
