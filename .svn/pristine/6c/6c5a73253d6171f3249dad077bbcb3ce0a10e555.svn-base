.cu-button {
  padding: 0 12px;
  border-radius: 4px;
  border: 2px solid var(--border);
  color: var(--font);
  background-color: #fff;
  cursor: pointer;
  height: 34px;
  font-size: 14px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-shadow: 0 1px 0 0 var(--border);
  user-select: none;
  white-space: nowrap;
}
.cu-button.small {
  padding: 0 10px;
  height: 30px;
}
.cu-button.mini {
  padding: 0 8px;
  height: 24px;
  font-size: 12px;
}
.cu-button:not([disabled]):active {
  box-shadow: none;
  transform: translateY(1px);
}
.cu-button.round {
  border-radius: 18px;
}
.cu-button.circle {
  width: 36px;
  padding: 0;
  text-align: center;
  border-radius: 50%;
}

.cu-button.circle.small {
  width: 30px;
}
.cu-button.circle.mini {
  width: 24px;
}

.cu-button.primary {
  color: #fff;
  background-color: var(--primary);
}
.cu-button.success {
  color: #fff;
  background-color: var(--success);
}
.cu-button.warning {
  color: #fff;
  background-color: var(--warning);
}
.cu-button.danger {
  color: #fff;
  background-color: var(--danger);
}

.cu-button.is-plain {
  color: var(--font);
}

.cu-button.primary.is-plain {
  background-color: #fff;
  color: var(--primary);
}
.cu-button.success.is-plain {
  background-color: #fff;
  color: var(--success);
}
.cu-button.warning.is-plain {
  background-color: #fff;
  color: var(--warning);
}
.cu-button.danger.is-plain {
  background-color: #fff;
  color: var(--danger);
}

.cu-button[disabled] {
  opacity: 0.7;
  cursor: no-drop;
  box-shadow: none;
}

.cu-button-group .cu-button:first-child {
  border-radius: 4px 0 0 4px;
}
.cu-button-group .cu-button:last-child {
  border-radius: 0 4px 4px 0;
}
.cu-button-group .cu-button {
  border-radius: 0;
}

.cu-button-group .cu-button + .cu-button {
  margin-left: -2px;
}
.cu-button-group + .cu-button-group,
.cu-button-group + .cu-button,
.cu-button + .cu-button,
.cu-button + .cu-button-group {
  margin-left: 10px;
}
.cu-button-group {
  display: inline-block;
  vertical-align: middle;
}
