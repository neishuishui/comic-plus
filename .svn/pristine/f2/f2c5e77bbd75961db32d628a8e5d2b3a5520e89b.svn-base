import type { ExtractPropTypes } from 'vue'

export const stepProps = {
  direction: {
    type: String,
    default: 'horizontal',
    validator: (value: string) => ['vertical', 'horizontal'].includes(value)
  },
  active: Number,
  center: Boolean,
  activeColor: String,
} as const

export type StepProps = ExtractPropTypes<typeof stepProps>