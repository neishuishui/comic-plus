
import { inject } from 'vue';
import type { ComicConfig } from '../export.type'

export function useConfig() {

  const $COMIC = inject<ComicConfig | null>('$COMIC', null);
  if (!$COMIC) {
    return {
      SIZE: null,
      Z_INDEX: 2000,
      THEME: '#e4acc7'
    }
  }

  return {
    SIZE: $COMIC.size,
    Z_INDEX: $COMIC.zIndex,
    THEME: $COMIC.color?.primary
  }

}