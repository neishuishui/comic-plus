.cu-form {
  font-size: 14px;
  color: var(--cu-text-color);
}
.cu-form.mini {
  font-size: 12px;
}

.cu-form-item {
  display: flex;
  align-items: center;
  margin-bottom: 22px;
}
.cu-form.mini .cu-form-item {
  margin-bottom: 16px;
}
.cu-form.small .cu-form-item {
  margin-bottom: 20px;
}

.cu-form-item .label {
  display: inline-flex;
  padding-right: 8px;
  height: 100%;
  /* transition: all 200ms; */
}

.cu-form.label-left .cu-form-item .label {
  justify-content: flex-start;
}
.cu-form.label-right .cu-form-item .label {
  justify-content: flex-end;
}

.cu-form-item.required .label::before {
  padding-right: 2px;
  content: '*';
  color: var(--cu-color-danger);
}

.cu-form-item__content {
  flex: 1;
  position: relative;
}

.cu-form-item__content .cu-form__error {
  position: absolute;
  left: 2px;
  bottom: -14px;
  line-height: 1;
  padding-top: 2px;
  font-size: 12px;
  color: var(--cu-color-danger);
}

.cu-error-enter-active {
  transform-origin: top;
  transition: transform 200ms;
}

.cu-error-enter-from {
  transform: scaleY(0);
}

.cu-form.label-top .cu-form-item {
  flex-direction: column;
}
.cu-form.label-top .cu-form-item .cu-form-item__content {
  width: 100%;
}
.cu-form.label-top .cu-form-item .label {
  width: 100%;
  padding-right: 0;
  margin-bottom: 8px;
  justify-content: flex-start;
}
