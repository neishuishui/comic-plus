.cu-menu {
  position: relative;
  height: 100%;
  width: 100%;
  overflow-y: auto;
  font-size: 14px;
}

.cu-menu .cu-menu-activebox {
  position: absolute;
  top: 0;
  display: block;
  width: 100%;
  height: 32px;
  z-index: -1;
  transition: transform 100ms;
}
.cu-menu .cu-menu-activebox::after {
  position: absolute;
  content: '';
  display: block;
  inset: 0;
  background-color: var(--primary);
  border-radius: 4px;
  opacity: 0.2;
}
.cu-sub-menu {
  width: 100%;
}

.cu-sub-menu .cu-sub-menu__head {
  width: 100%;
  height: 32px;
  line-height: 32px;
  padding: 0 30px 0 4px;
  cursor: pointer;
  position: relative;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.cu-sub-menu .cu-sub-menu__head .cu-icon-right {
  position: absolute;
  right: 0;
  width: 28px;
  text-align: center;
  transition: transform 200ms;
}

.cu-sub-menu .cu-sub-menu__head .cu-icon-right.active {
  transform: rotate(90deg);
}

.cu-sub-menu__content {
  padding-left: 10px;
}

.cu-menu-item {
  height: 32px;
  line-height: 32px;
  padding: 0 4px;
  cursor: pointer;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.cu-menu-item > span,
.cu-sub-menu > span {
  vertical-align: middle;
}
.cu-menu-item .icon,
.cu-sub-menu .icon {
  margin-right: 4px;
}
.cu-menu-item.is-active {
  color: var(--primary);
}

