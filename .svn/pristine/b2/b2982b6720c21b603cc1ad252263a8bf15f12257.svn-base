.cu-anchor {
  list-style: none;
  font-size: 13px;
  padding-left: 6px;
  color: var(--cu-color-text-light);
  border-left: var(--cu-anchor-line-weight, 4px) solid transparent;
  border-bottom: 0;
  position: relative;
}

.cu-anchor.horizontal {
  padding-left: 0;
  display: flex;
  flex-wrap: nowrap;
  border-left: 0;
  border-bottom: var(--cu-anchor-line-weight, 2px) solid transparent;
}

.cu-anchor.show-line {
  border-color: var(--cu-border-color);
}

.cu-anchor .line {
  display: block;
  position: absolute;
  border-radius: calc(var(--cu-anchor-line-weight, 4px) / 2);
  background-color: var(--cu-anchor-color, var(--cu-color-primary));
  transition: all 200ms;
}

.cu-anchor.vertical .line {
  width: var(--cu-anchor-line-weight, 4px);
  left: calc(0px - var(--cu-anchor-line-weight, 4px));
  height: calc(var(--cu-size-default) - 12px);
}

.cu-anchor.horizontal .line {
  bottom: 0;
  height: var(--cu-anchor-line-weight, 2px);
}

.cu-anchor-link {
  display: inline-block;
  list-style: none;
  cursor: pointer;
  color: inherit;
  transition: all 200ms;
  font-size: inherit;
}

.cu-anchor-link.underline {
  text-decoration: underline;
}

.cu-anchor .cu-anchor-link {
  display: block;
  min-height: calc(var(--cu-size-default) - 2px);
  line-height: calc(var(--cu-size-default) - 2px);
  text-decoration: none;
}

.cu-anchor-sub-link {
  padding-left: 8px;
}

.cu-anchor-link a.active {
  color: var(--cu-anchor-color, var(--cu-color-primary));
}
.cu-anchor-link a:hover {
  text-shadow: 0 0 1px;
}

.cu-anchor-link a {
  text-decoration: none;
  color: inherit;
  width: 100%;
  height: 100%;
  display: block;
}
.cu-anchor .cu-anchor-link a {
  padding: 0 4px;
}

.cu-anchor.small .line {
  height: calc(var(--cu-size-small) - 12px);
}
.cu-anchor.mini .line {
  height: calc(var(--cu-size-mini) - 12px);
}

.cu-anchor.small .cu-anchor-link {
  min-height: calc(var(--cu-size-small) - 2px);
  line-height: calc(var(--cu-size-small) - 2px);
  font-size: 12px;
}
.cu-anchor.mini .cu-anchor-link {
  min-height: calc(var(--cu-size-mini) - 2px);
  line-height: calc(var(--cu-size-mini) - 2px);
  font-size: 12px;
}
