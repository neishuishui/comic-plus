import type { ExtractPropTypes } from "vue";

export const messageProps = {
  type: String,
  message: String,
  icon: String,
  color: String,
  showClose: Boolean,
  duration: {
    type: Number,
    default: 3000
  },
  id: {
    type: String,
    required: true
  },
  close: {
    type: Function,
    required: true,
  },
  destroy: {
    type: Function,
    required: true,
  }
} as const

export type messageProps = ExtractPropTypes<typeof messageProps>

