.cu-fade-enter-active,
.cu-fade-leave-active {
  transition: opacity 200ms ease-in-out !important;
}
.cu-fade-linear-enter-active,
.cu-fade-linear-leave-active {
  transition: opacity 200ms linear !important;
}

.cu-fade-enter-from,
.cu-fade-leave-to,
.cu-fade-linear-enter-from,
.cu-fade-linear-leave-to {
  opacity: 0;
}

.cu-fade-enter-from,
.cu-fade-leave-to {
  opacity: 0;
}

.cu-zoom-x-enter-active,
.cu-zoom-x-leave-active {
  transition: transform 200ms ease !important;
}

.cu-zoom-x-enter-from,
.cu-zoom-x-leave-to {
  transform: scaleX(0);
}

.cu-zoom-top-enter-active,
.cu-zoom-top-leave-active {
  transform-origin: top;
  transition: transform 200ms ease !important;
}
.cu-zoom-bottom-enter-active,
.cu-zoom-bottom-leave-active {
  transform-origin: bottom;
  transition: transform 200ms ease !important;
}

.cu-zoom-top-enter-from,
.cu-zoom-top-leave-to,
.cu-zoom-bottom-enter-from,
.cu-zoom-bottom-leave-to {
  transform: scaleY(0);
}

.cu-dialog-enter-active {
  animation: dialog 500ms;
}

.cu-dialog-leave-active {
  animation: dialog 500ms reverse;
}

.cu-fade-top-enter-active,
.cu-fade-top-leave-active {
  transition: opacity 300ms, transform 300ms;
}

.cu-fade-top-enter-from,
.cu-fade-top-leave-to {
  opacity: 0;
  transform: translateY(-10%);
}

.cu-fade-message-enter-active,
.cu-fade-message-leave-active {
  transition: opacity 300ms, transform 400ms;
}
.cu-fade-message-enter-from,
.cu-fade-message-leave-to {
  opacity: 0;
  transform: translateY(-20%);
}

@keyframes dialog {
  0% {
    transform: scale(0);
  }
  25% {
    transform: scale(0.01, 0.01);
  }
  50% {
    transform: scale(1, 0.01);
  }
  95% {
    transform: scale(1, 1);
  }
  100% {
    transform: scale(1, 1);
  }
}
