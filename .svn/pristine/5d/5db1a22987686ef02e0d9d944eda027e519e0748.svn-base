.cu-upload {
  font-size: 14px;
  color: var(--font);
}
.cu-upload.picture {
  display: flex;
  flex-wrap: wrap;
}
.cu-upload ul {
  list-style: none;
}

.cu-upload .cu-upload__chooseItem {
  vertical-align: middle;
  display: inline-flex;
  margin: 0 8px 8px 0;
}
.cu-upload .cu-upload__tips {
  font-size: 12px;
}

.cu-upload__list {
  position: relative;
}

.cu-upload__list li {
  position: relative;
  height: 20px;
  line-height: 20px;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
  width: 100%;
  font-size: 12px;
  padding: 0 8px;
  border-radius: 2px;
  transition: all 200ms;
}
.cu-upload__list li:first-child {
  margin-top: 10px;
}
.cu-upload__list li .filename {
  padding-left: 4px;
  flex: 1;
  flex-shrink: 0;
}

.cu-upload__list li .progress {
  position: absolute;
  right: 0;
  bottom: -16px;
  left: 16px;
}

.cu-upload__list li:hover {
  background-color: var(--bgcolor);
}

.cu-upload__list .delete {
  color: var(--danger);
  opacity: 0;
  transition: opacity 200ms;
  cursor: pointer;
}
.cu-upload__list li:hover .delete {
  opacity: 1;
}

.cu-upload__list li i {
  font-size: 14px;
  color: var(--font-light);
}

.cu-upload__list li .success {
  color: var(--success);
}
.cu-upload__list li .fail {
  color: var(--danger);
}

.cu-upload__trigger {
  width: 120px;
  height: 120px;
  border-radius: 4px;
  border: 1px dashed var(--border);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  color: var(--font-light2);
  cursor: pointer;
  transition: all 200ms;
  background-color: #fff;
}

.cu-upload__trigger:hover {
  border-color: var(--primary);
  color: var(--primary);
}

.cu-upload__pictures {
  display: inline-flex;
  flex-wrap: wrap;
}

.cu-upload__pictures li {
  display: inline-flex;
  width: 120px;
  height: 120px;
  margin: 0 8px 8px 0;
  border-radius: 4px;
  overflow: hidden;
  border: 1px solid var(--border);
  position: relative;
}
.cu-upload__pictures li.choose-slot {
  border: 0;
}

.cu-upload__pictures li .mask {
  display: flex;
  opacity: 0;
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.2);
  color: #fff;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  font-weight: 200;
  transition: all 200ms;
  z-index: 3;
}
.cu-upload__pictures li:hover .mask {
  opacity: 1;
}

.cu-upload__pictures li .mask i {
  margin: 0 4px;
  cursor: pointer;
}

.cu-upload__pictures img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border: 0;
}

.cu-upload__pictures li .progress {
  position: absolute;
  inset: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 3;
}

.cu-upload__pictures li.fail {
  border-color: var(--danger);
}
