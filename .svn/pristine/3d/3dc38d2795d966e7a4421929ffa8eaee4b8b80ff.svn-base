@font-face {
  font-family: 'comic-font';
  font-weight: 400;
  src: url('./AlibabaPuHuiTi-2-55-Regular.ttf');
  font-display: swap;
}

:root {
  /* 主题色 */
  --primary: #e4acc7;
  /* #e4acc7 */
  /* #7fadff */
  --success: #67c23a;
  --danger: #f56c6c;
  --warning: #e6a23c;

  /* 文字色  15142f*/
  --font: #333;
  --font-light: #909399;
  --font-light2: #dcdfe6;

  /* 边框颜色 */
  --border: #494a4b;
  /* 494a4b */
  --input-border: #dcdfe6;

  /* 背景色 */
  --bgcolor: #f3f7fb;

  /* 其它颜色 */
  --disabled-bg: #fafafa;
  --disabled-font: #a8abb2;
}

[class^='cu-']::-webkit-scrollbar,
[class*='cu-']::-webkit-scrollbar {
  width: 10px;
  height: 10px;
  background-color: transparent;
}
[class^='cu-']::-webkit-scrollbar-thumb,
[class*='cu-']::-webkit-scrollbar-thumb {
  border-style: dashed;
  border-color: transparent;
  border-width: 3px;
  background-color: var(--input-border);
  background-clip: padding-box;
}

[class^='cu-'],
[class*='cu-'] {
  font-family: 'comic-font', Arial, 'STXihei';
  box-sizing: border-box;
  vertical-align: middle;
}

i {
  font-style: normal;
}

[class*=' cu-icon-'],
[class^='cu-icon-'] {
  font-family: 'iconfont' !important;
}

.cu-title {
  font-size: 12px;
  position: fixed;
  background-color: #fff;
  color: var(--font);
  padding: 8px;
  left: 0;
  top: 0;
  max-width: 400px;
  border-radius: 4px;
  z-index: 20000;
  border: 2px solid var(--border);
}

.cu-message--mode {
  width: 100%;
  height: 0;
  top: 0;
  left: 0;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cu-loading {
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: var(--font);
  font-size: 14px;
  background-color: rgba(255, 255, 255, 0.9);
}

.cu-loading .cu-icon-loading {
  font-size: 28px;
}
.cu-loading > span {
  margin: 8px 0;
}
