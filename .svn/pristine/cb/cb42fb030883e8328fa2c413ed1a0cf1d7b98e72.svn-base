import { PropType, defineComponent, h } from 'vue';
export default defineComponent({
  name: 'CuListAction',
  props: {
    actions: Array as PropType<string[]>,
    align: {
      type: String as PropType<'start' | 'center' | 'end'>,
      default: 'end'
    }
  },
  emits: {
    click: (action: string) => typeof action === 'string'
  },
  setup(props, { emit }) {
    const alignStyle = {
      left: 'flex-start',
      center: 'center',
      end: 'flex-end'
    };

    return () => {
      return h('div', { class: 'cu-list-action', style: { 'justify-content': alignStyle[props.align] } }, [
        props.actions.map((item) => {
          return h('span', { onclick: () => emit('click', item) }, item);
        })
      ]);
    };
  }
});
