.cu-popper {
  position: fixed;
  transform-origin: center top;
  border-radius: var(--cu-border-radius);
  background-color: #fff;
  /* border: 1px solid transparent; */
  filter: drop-shadow(0 0px 1px rgba(200, 200, 200, 1)) drop-shadow(0 2px 4px rgba(0, 0, 0, 0.12))
    drop-shadow(0 0 6px rgba(0, 0, 0, 0.04));
}
.cu-popper:not(.hide-arrow):before {
  position: absolute;
  display: block;
  content: '';
  width: 12px;
  height: 6px;
  -webkit-clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  background-color: #fff;
  transform: translateX(-50%);
}

.cu-popper:not(.hide-arrow).top {
  margin-top: 10px;
}
.cu-popper:not(.hide-arrow).bottom {
  margin-bottom: 10px;
}

.cu-popper.top::before {
  left: var(--left);
  top: -5px;
}
.cu-popper.bottom::before {
  left: var(--left);
  -webkit-clip-path: polygon(100% 0, 0 0, 50% 100%);
  clip-path: polygon(100% 0, 0 0, 50% 100%);
  bottom: -5px;
}

.cu-popper.bottom {
  transform-origin: center bottom;
}
.popper-enter-active {
  animation: popper-in 200ms;
}
.popper-leave-active {
  animation: popper-in 200ms reverse;
}
@keyframes popper-in {
  0% {
    opacity: 0;
    transform: scaleY(0);
  }
  100% {
    opacity: 1;
    transform: scaleY(1);
  }
}

.comic-plus__is-comic .cu-popper {
  border-color: var(--cu-comic-border-color);
}
