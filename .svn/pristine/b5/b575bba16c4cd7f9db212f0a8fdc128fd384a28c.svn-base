.cu-link {
  color: var(--cu-color-text);
  text-decoration: none;
  cursor: pointer;
  font-size: 14px;
  --cu-link-disabled-color: var(--cu-color-text-light2);
}

.cu-link.underline {
  text-decoration: underline;
}

.cu-link:not([disabled='true']):hover {
  text-shadow: 0 0 2px;
}

.cu-link.cu-link--primary {
  color: var(--cu-color-primary);
  --cu-link-disabled-color: var(--cu-color-primary-light);
}

.cu-link.cu-link--success {
  color: var(--cu-color-success);
  --cu-link-disabled-color: var(--cu-color-success-light);
}
.cu-link.cu-link--danger {
  color: var(--cu-color-danger);
  --cu-link-disabled-color: var(--cu-color-danger-light);
}
.cu-link.cu-link--warning {
  color: var(--cu-color-warning);
  --cu-link-disabled-color: var(--cu-color-warning-light);
}
.cu-link.cu-link--info {
  color: var(--cu-color-info);
  --cu-link-disabled-color: var(--cu-color-info-light);
}

.cu-link + .cu-link {
  margin-left: 10px;
}

.cu-link[disabled='true'] {
  color: var(--cu-link-disabled-color);
  cursor: no-drop;
}
