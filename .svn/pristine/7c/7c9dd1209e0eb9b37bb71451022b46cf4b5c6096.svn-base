.cu-checkbox {
  display: inline-flex;
  align-items: center;
  cursor: pointer;
  font-size: 14px;
  color: var(--cu-color-text);
  --cu-checkbox-color: var(--cu-color-primary);
  vertical-align: middle;
}
.cu-checkbox.is-disabled {
  cursor: no-drop;
  color: var(--cu-disabled-font);
}
.comic-plus__is-comic .cu-checkbox.is-disabled .cu-checkbox__inner,
.cu-checkbox.is-disabled .cu-checkbox__inner {
  background-color: var(--cu-disabled-background);
  color: var(--cu-disabled-font);
  border-color: var(--cu-disabled-border);
}

.cu-checkbox:not(.is-disabled):hover {
  color: var(--cu-checkbox-color);
}
.cu-checkbox:not(.is-disabled):hover .cu-checkbox__inner {
  border-color: var(--cu-checkbox-color);
}

.cu-checkbox input.cu-checkbox__input {
  position: absolute;
  z-index: -1;
  display: none;
  width: 0;
  height: 0;
}

.cu-checkbox input:not(:disabled):active ~ .cu-checkbox__inner {
  transform: scale(0.9);
}
.cu-checkbox:not(.is-disabled).is-check .cu-checkbox__inner,
.cu-checkbox:not(.is-disabled) .cu-checkbox__inner.indeterminate {
  background-color: var(--cu-checkbox-color);
  border-color: var(--cu-checkbox-color);
}

.cu-checkbox:not(.is-disabled).is-check .cu-checkbox__label {
  color: var(--cu-checkbox-color);
}

.cu-checkbox__inner {
  display: inline-block;
  width: 16px;
  height: 16px;
  border-radius: calc(var(--cu-border-radius) - 1px);
  text-align: center;
  border: 1px solid var(--cu-border-color);
  color: #fff;
  position: relative;
  transition: all 200ms;
}

.cu-checkbox__inner i {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 12px;
  line-height: 1;
  text-align: center;
}

.cu-checkbox-group {
  display: inline-flex;
  flex-wrap: wrap;
}

.cu-checkbox + .cu-checkbox {
  margin-left: 10px;
}

.cu-checkbox .cu-checkbox__label {
  margin-left: 4px;
}

.comic-plus__is-comic .cu-checkbox .cu-checkbox__inner {
  border-color: var(--cu-comic-border-color);
}
