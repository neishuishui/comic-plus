//反馈组件
import Dialog from './dialog/index'

//其它组件
import TransitionCollapse from './transition-collapse/index'

//api
import MessageBox from './message-box/index'
import { preview } from './preview-image/index'

const components: object[] = [
  //基础组件
  Button,
  ButtonGroup,
  Link,

  //表单组件
  Form,
  FormItem,
  Checkbox,
  CheckboxGroup,
  Radio,
  RadioGroup,
  Input,
  InputNumber,
  Textarea,
  Switch,
  Slider,
  Select,
  Option,
  Cascader,
  TimePicker,
  DatePicker,
  DatetimepPicker,

  //数据渲染
  Table,
  Tag,
  Collapse,
  CollapseItem,
  Waterfall,
  WaterfallItem,
  Image,
  Badge,
  Carousel,
  CarouselItem,
  Progress,
  Card,
  CardGroup,
  Empty,
  Ellipsis,
  Countdown,

  //导航菜单
  Menu,
  MenuItem,
  SubMenu,
  Tabs,
  TabPane,
  Elevator,
  ElevatorItem,
  Backtop,
  Breadcrumb,
  BreadcrumbItem,

  //反馈组件
  Dialog,

  //其它
  TransitionCollapse,
]


const plugin: Plugin = {
  install(App: any, config: object | null) {
    components.forEach((item: ComponentOptions) => {
      App.component(item.name, item);
    });

    App.config.globalProperties.$alert = MessageBox.alert
    App.config.globalProperties.$confirm = MessageBox.confirm
    App.config.globalProperties.$message = MessageBox.message
    App.config.globalProperties.$notice = MessageBox.notice
    App.config.globalProperties.$preview = preview

    useComicConfig(App, config)
  },
}

interface defaultConfig {
  size?: string,
  zIndex?: number,
  theme?: string,
}

const useComicConfig: Function = function (App: any, config: defaultConfig): void {
  if (config) {
    App.config.globalProperties.$COMIC = config

    if (config.theme) {
      document.body.style.setProperty('--primary', config.theme)
    }
  }
}


export default plugin

