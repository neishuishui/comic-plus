import type { ExtractDefaultPropTypes, PropType } from 'vue';

type Position =
  | 'top-start'
  | 'top-center'
  | 'top-end'
  | 'bottom-start'
  | 'bottom-center'
  | 'bottom-end'
  | 'left-start'
  | 'left-center'
  | 'left-end'
  | 'right-start'
  | 'right-center'
  | 'right-end';

export const titleProps = {
  title: String,
  position: {
    type: String as PropType<Position>,
    default: 'top-end'
  },
  parent: HTMLElement
} as const;

export type TitleProps = ExtractDefaultPropTypes<typeof titleProps>;
