.cu-input .cu-input__content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.cu-input .prefix-icon,
.cu-input .suffix-icon {
  position: absolute;
  color: var(--cu-text-color-light);
  min-width: 14px;
  text-align: center;
}

.cu-input .prefix-icon {
  left: 4px;
}
.cu-input .suffix-icon {
  right: 4px;
}

.cu-input .prefix-slot,
.cu-input .suffix-slot {
  padding: 0 10px;
  height: 100%;
  background-color: var(--cu-background-color);
  color: var(--cu-text-color-light);
  display: inline-flex;
  align-items: center;
  cursor: pointer;
}
.cu-input .prefix-slot {
  border-right: 1px solid;
  border-color: inherit;
  border-radius: var(--cu-border-radius) 0 0 var(--cu-border-radius);
}
.cu-input .suffix-slot {
  border-left: 1px solid;
  border-color: inherit;
  border-radius: 0 var(--cu-border-radius) var(--cu-border-radius) 0;
}
.cu-input .cu-input__content .clearable {
  margin-right: 2px;
  display: none;
  color: var(--cu-text-color-light);
}

.cu-input:hover .cu-input__content .clearable {
  display: inline-block;
}
.cu-input .cu-input__content .cu-input__inner {
  flex: 0 0 auto;
}
.cu-input .clearable {
  cursor: pointer;
}
