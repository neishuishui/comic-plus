.cu-progress {
  display: flex;
  position: relative;
  align-items: center;
  color: var(--font);
}
.cu-progress__inner {
  flex: 1;
  /* border: 1px solid var(--color, var(--primary)); */
  border: 1px solid var(--border);
  border-radius: 4px;
  overflow: hidden;
  background-color: #fff;
}

.cu-progress__bar {
  background-color: var(--color, var(--primary));
  transition: all 400ms ease;
  min-height: 6px;
  border-radius: inherit;
  color: #fff;
  justify-content: flex-end;
  align-items: center;
  display: flex;
}

@keyframes flow {
  from {
    background-position: -100%;
  }
  to {
    background-position: 100%;
  }
}

.cu-progress.line-trends .cu-progress__bar {
  background-image: linear-gradient(
    45deg,
    rgba(0, 0, 0, 0.1) 25%,
    transparent 25%,
    transparent 50%,
    rgba(0, 0, 0, 0.1) 50%,
    rgba(0, 0, 0, 0.1) 75%,
    transparent 75%,
    transparent
  );
  background-size: 1.25em 1.25em;
  animation: flow 5s linear infinite;
}

.cu-progress__describe {
  margin: 0 6px;
  min-width: 32px;
  font-size: 12px;
}

.cu-progress:not(.trends) .cu-progress__describe .cu-icon-success-c {
  color: var(--success);
}
.cu-progress:not(.trends) .cu-progress__describe .cu-icon-warning {
  color: var(--warning);
}
.cu-progress:not(.trends) .cu-progress__describe .cu-icon-close-c {
  color: var(--danger);
}

.cu-progress__circle {
  stroke: var(--color, var(--primary));
  stroke-width: var(--w, 6);
  stroke-dasharray: var(--l);
  stroke-dashoffset: var(--offset);
  stroke-linecap: round;
  fill: none;
  transition: stroke-dashoffset 400ms ease;
}

.cu-progress__circle_bg {
  stroke: var(--border);
  stroke-width: var(--w, 6);
  stroke-dasharray: var(--l);
  stroke-dashoffset: 0;
  stroke-linecap: round;
  fill: none;
}

.cu-progress.circle,
.cu-progress.trends {
  display: inline-flex;
}
.cu-progress.circle .cu-progress__describe,
.cu-progress.trends .cu-progress__describe {
  position: absolute;
  left: 50%;
  top: 50%;
  min-width: 0;
  margin: 0;
  display: flex;
  transform: translate(-50%, -50%);
  /* z-index: ; */
}

.cu-progress.trends .cu-progress__inner {
  border-radius: 50%;
  border: 2px solid var(--color, var(--primary));
  /* background-color: #f00; */
}

.cu-progress.trends .cu-progress__bar {
  border-radius: 50%;
  border: 2px solid #fff;
  position: relative;
  background-color: var(--color, var(--primary));
}

@keyframes rotate {
  to {
    transform: rotate(360deg);
  }
}

.cu-progress.trends .cu-progress__bar::before,
.cu-progress.trends .cu-progress__bar::after {
  position: absolute;
  content: '';
  display: block;
  width: 200%;
  height: 200%;
  left: -50%;
  bottom: var(--offset);
  transition: bottom 400ms;
}

.cu-progress.trends .cu-progress__bar::before {
  border-radius: 45%;
  background-color: #fff;
  animation: rotate 5s infinite linear;
}
.cu-progress.trends .cu-progress__bar::after {
  border-radius: 40%;
  background-color: hsla(0, 0%, 100%, 0.4);
  animation: rotate 10s infinite linear;
}
