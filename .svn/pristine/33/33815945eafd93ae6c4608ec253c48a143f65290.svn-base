.cu-ellipsis {
  overflow: hidden;
  font-size: 14px;
  line-height: 1.5;
}

.cu-ellipsis__button {
  margin: 0 auto;
  width: fit-content;
  cursor: pointer;
  transition: all 200ms;
  display: flex;
  align-items: center;
  color: var(--cu-text-color-light);
}

.cu-ellipsis__button:hover {
  color: var(--cu-color-primary);
}
.cu-ellipsis__text {
  width: 100%;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: var(--clamp);
  -webkit-box-orient: vertical;
}
