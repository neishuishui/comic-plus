.cu-form {
  font-size: 14px;
  color: var(--font);
}

.cu-form-item {
  display: flex;
  align-items: center;
  margin-bottom: 22px;
}

.cu-form-item .label {
  margin-right: 8px;
  display: inline-flex;
  height: 100%;
  justify-content: flex-end;
  line-height: 1;
}
.cu-form-item.required .label::before {
  padding-right: 2px;
  content: '*';
  color: var(--danger);
}

.cu-form-item__content {
  flex: 1;
  position: relative;
}

.cu-form-item__content .cu-form__error {
  position: absolute;
  left: 2px;
  bottom: -14px;
  line-height: 1;
  padding-top: 2px;
  font-size: 12px;
  color: var(--danger);
}

.cu-error-enter-active {
  transform-origin: top;
  transition: transform 200ms;
}

.cu-error-enter-from {
  transform: scaleY(0);
}
