.cu-table {
  position: relative;
  width: 100%;
  flex: 1;
  color: var(--font);
  /* */
  border-bottom: 1px solid var(--border);
  /* overflow-x: auto; */
}
.cu-table table {
  width: 100%;
  font-size: 14px;
  border-spacing: 0;
  table-layout: fixed;
}

.cu-table table th,
.cu-table table td {
  text-align: left;
  padding: 2px 8px;
}
.cu-table.border {
  border-top: 1px solid var(--border);
  border-left: 1px solid var(--border);
  border-right: 1px solid var(--border);
}

.cu-table table thead {
  background-color: var(--bgcolor);
}
.cu-table__head {
  display: flex;
}
.cu-table__body {
  overflow: hidden;
}
.scroll-gap {
  border-bottom: 1px solid var(--border);
  background-color: var(--bgcolor);
}

.cu-table__row th,
.cu-table__row td {
  height: 36px;
  border-bottom: 1px solid var(--border);
}

.cu-table__row:last-child td {
  border-bottom: 0;
}

.cu-table.border .cu-table__td,
.cu-table.border .cu-table__th {
  border-right: 1px solid var(--border);
}
.cu-table:not(.scrollbody) .cu-table__td:last-child,
.cu-table:not(.scrollbody) .cu-table__th:last-child {
  border-right: 0;
}

.cu-table .checkbox {
  text-align: center;
}

.cu-table__empty {
  line-height: 40px;
  text-align: center;
  font-size: 12px;
  color: var(--font-light);
}
