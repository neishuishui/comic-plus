<template>
  <span
    v-if="!transition"
    class="cu-tag"
    :class="[type ? 'cu-tag--' + type : '', size ?? SIZE, { plain }]"
    :style="[{ paddingRight: closable ? '8px' : '' }, customStyle]"
  >
    <slot></slot>
    <span class="cu-icon-close closeicon" v-if="closable" @click="$emit('close')"></span>
