import type { ExtractPropTypes, PropType } from 'vue';
import type { ComicType2 } from '../../../type';

export const noticeProps = {
  position: {
    type: String as PropType<'lt' | 'lb' | 'rt' | 'rb'>,
    default: 'rt'
  },
  type: String as PropType<ComicType2>,
  title: String,
  content: String,
  icon: String,
  color: String,
  showClose: {
    type: Boolean,
    default: true
  },
  duration: {
    type: Number,
    default: 3000
  },
  isVNode: Boolean,
  click: Function
} as const;

export type NoticeOptions = ExtractPropTypes<typeof noticeProps>;
