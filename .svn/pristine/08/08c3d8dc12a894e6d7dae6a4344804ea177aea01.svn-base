import { inject } from "vue";
export function useItemValidate() {
  interface validateForm {
    trigger: string[];
    fn: Function;
  }
  const validate = inject<validateForm | null>('form-item:validate', null);

  const itemValidate = function (trigger: string = 'change') {
    if (validate && validate.trigger.includes(trigger)) {
      validate.fn();
    }
  }
  return { itemValidate }
}