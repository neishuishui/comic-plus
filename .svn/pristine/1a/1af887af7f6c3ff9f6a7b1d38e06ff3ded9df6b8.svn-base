<template>
  <div class="cu-breadcrumb-item">
    <span class="cu-breadcrumb__text" :class="[{ link: to }, { active }]" @click="itemHandleClick()">
      <slot></slot>
    </span>
    <span class="cu-breadcrumb__separator" v-if="!parent?.props.background">
      <i :class="parent?.props.separatorIcon">{{
        parent?.props.separatorIcon ? undefined : parent?.props.separator
      }}</i>
    </span>
  </div>
</template>

<script setup lang="ts">
import { inject } from 'vue';
import { useRouter } from 'vue-router';
import '../style/css';
import { breadcrumbItemProps } from './item.props';
import type { BreadcrumbProvide } from './type';
defineOptions({
  name: 'CuBreadcrumbItem'
});

const props = defineProps(breadcrumbItemProps);
const router = useRouter()!;

const parent = inject<BreadcrumbProvide>('breadcrumb:parent');

function itemHandleClick() {
  if (!props.to) return;
  router.push(props.to);
}
</script>
