import type { ExtractPropTypes, PropType } from 'vue';
import type { ComicDir } from '../../type';

export const zoneProps = {
  modelValue: {
    type: [String, Number] as PropType<string | number>,
    default: 0.5
  },
  mode: {
    type: String as PropType<ComicDir>,
    default: 'horizontal'
  },
  lineWeight: {
    type: Number,
    default: 6
  },
  min: {
    type: [String, Number] as PropType<string | number>,
    default: '40px'
  },
  max: {
    type: [String, Number] as PropType<string | number>,
    default: '40px'
  }
} as const;

export type ZoneProps = ExtractPropTypes<typeof zoneProps>;

export const zoneEmits = {
  ['update:modelValue']: (val: string | number) => true,
  ['drag-start']: () => true,
  ['drag']: (e: Event) => true,
  ['drag-end']: () => true
};

export type ZoneEmits = ExtractPropTypes<typeof zoneEmits>;
