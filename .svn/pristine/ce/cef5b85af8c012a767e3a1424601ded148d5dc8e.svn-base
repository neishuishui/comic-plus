.cu-textarea {
  color: var(--cu-text-color);
  overflow: hidden;
  position: relative;
  font-size: 13px;
  border-color: var(--cu-border-color);
  vertical-align: middle;
  display: flex;
}

.cu-textarea textarea {
  outline: none;
  padding: 4px 8px;
  width: 100%;
  border: 1px solid;
  border-color: inherit;
  border-radius: var(--cu-border-radius);
  font-size: inherit;
  color: inherit;
  resize: vertical;
  cursor: inherit;
  min-height: 30px;
  transition: border-color 200ms;
}
.cu-textarea.is-disabled {
  cursor: no-drop;
}
.cu-textarea.is-disabled textarea {
  resize: none;
}

.cu-textarea textarea::placeholder {
  color: var(--cu-placeholder-color);
}

.cu-textarea .cu-textarea__maxlength {
  position: absolute;
  right: 10px;
  bottom: 5px;
  font-size: 12px;
  color: var(--cu-text-color-light);
  user-select: none;
  background-color: #fff;
}
.cu-textarea.is-disabled .cu-textarea__maxlength {
  background-color: var(--cu-disabled-background);
}

.cu-textarea .cu-textarea__text {
  padding: 5px 9px;
  font-size: inherit;
  position: absolute;
  z-index: -99999;
}

.comic-plus__is-comic .cu-textarea {
  border-color: var(--cu-comic-border-color);
}

.comic-plus__is-comic .cu-textarea::before {
  position: absolute;
  content: '';
  display: block;
  width: 18px;
  height: 1px;
  background: var(--cu-comic-fill-background);
  top: 0px;
  left: 10px;
  transition: all 200ms;
  box-sizing: border-box;
}
