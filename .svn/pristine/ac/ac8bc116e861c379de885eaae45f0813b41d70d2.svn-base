.cu-pagination {
  display: block;
  font-size: 14px;
  color: var(--cu-color-text);
  user-select: none;
  white-space: nowrap;
}
.cu-pagination__container {
  display: flex;
  align-items: center;
}
.cu-pagination__container > div {
  padding: 0 4px;
}

.cu-pagination__pages {
  display: flex;
  align-items: center;
}

.cu-pagination__pages span {
  min-width: var(--cu-size-default);
  height: var(--cu-size-default);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--cu-border-radius);
  cursor: pointer;
  position: relative;
  box-sizing: border-box;
  transition: all 200ms;
  line-height: 1;
}

.cu-pagination.is-background .cu-pagination__pages span {
  margin: 0 4px;
  padding: 2px;
  background-color: #f4f4f5;
}

.cu-pagination__pages span.button {
  font-size: 18px;
}

.cu-pagination .cu-pagination__pages span:hover,
.cu-pagination .cu-pagination__pages span.current {
  color: var(--cu-color-primary);
  border-color: var(--cu-color-primary);
}

.cu-pagination__pages .more i:first-child {
  display: block;
}
.cu-pagination__pages .more i:last-child {
  display: none;
}

.cu-pagination__pages .more:hover i:first-child {
  display: none;
}
.cu-pagination__pages .more:hover i:last-child {
  display: block;
}

.cu-pagination .cu-pagination__pages span.disabled {
  color: var(--cu-disabled-font);
  cursor: no-drop;
}
.cu-pagination__jumper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.cu-pagination__jumper input {
  text-align: center;
}

.cu-pagination.small .cu-pagination__pages span {
  min-width: var(--cu-size-small);
  height: var(--cu-size-small);
}

.cu-pagination.mini .cu-pagination__pages span {
  font-size: 12px;
  min-width: var(--cu-size-mini);
  height: var(--cu-size-mini);
}

.cu-pagination.mini .cu-pagination__pages span.button {
  font-size: 14px;
}

.comic-plus__is-comic .cu-pagination.is-background .cu-pagination__pages span {
  border: 1px solid var(--cu-comic-border-color);
  position: relative;
}
.comic-plus__is-comic .cu-pagination.is-background .cu-pagination__pages span::after {
  position: absolute;
  content: '';
  display: block;
  width: 20%;
  height: 1px;
  background: var(--cu-comic-fill-background-color);
  top: -1px;
  left: 2px;
  transition: all 200ms;
  box-sizing: border-box;
}
