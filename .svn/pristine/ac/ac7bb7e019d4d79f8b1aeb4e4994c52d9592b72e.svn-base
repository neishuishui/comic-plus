:root {
  /* 主题色 */
  --primary: #e4acc7;
  --primary-light: #ecc5d8;
  --primary-light2: #fcf7f9;

  --success: #67c23a;
  --success-light: #95d475;
  --success-light2: #f0f9eb;

  --danger: #f56c6c;
  --danger-light: #f89898;
  --danger-light2: #fef0f0;

  --warning: #e6a23c;
  --warning-light: #eebe77;
  --warning-light2: #fdf9f1;

  /* 文字色  15142f*/
  --font: #333333;
  --font-light: #707070;
  --font-light2: #d6d6d6;

  --placeholder: #a8a8a8;

  /* 边框颜色 */
  --border: #dcdfe6;

  /* 背景色 */
  --bgcolor: #f3f7fb;

  /* 其它颜色 */
  --disabled-bg: #fafafa;
  --disabled-font: #a8abb2;
  --disabled-border: #cccccc;
}
