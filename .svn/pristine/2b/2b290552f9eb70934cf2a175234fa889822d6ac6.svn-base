.cu-date-picker__inner {
  flex: auto;
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
}
.cu-date-picker__inner input {
  cursor: inherit;
}
.cu-date-picker__inner > i {
  min-width: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: inherit;
  transition: transform 200ms;
  color: var(--cu-text-color-light);
}

.cu-date-picker__popper {
  font-size: 13px;
  color: var(--cu-text-color);
}

.cu-date-picker__select {
  padding: 4px;
  width: 320px;
}
.cu-date-picker__select .head {
  padding: 8px;
  display: flex;
  align-items: center;
}

.cu-date-picker__select .head .head-content {
  flex: 1;
  justify-content: center;
  font-size: 16px;
  align-items: center;
  display: flex;
}

.cu-date-picker__select .head .head-content > span {
  padding: 0 4px;
}

.cu-date-picker__select .head i {
  font-size: 18px;
  cursor: pointer;
}

.cu-date-picker__select .content {
  width: 100%;
}
.cu-date-picker__select .content > div {
  display: flex;
}
.cu-date-picker__select .week {
  font-size: 14px;
  width: 100%;
  display: flex;
  border-bottom: 1px solid var(--cu-border-color);
}

.cu-date-picker__select .week > span {
  flex: 1;
  height: 32px;
  padding: 4px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}
.cu-date-picker__select .days {
  flex-direction: column;
}
.cu-date-picker__select .days > div {
  width: 100%;
  display: flex;
}

.cu-date-picker__select .days > div > span {
  position: relative;
  flex: 1;
  height: 32px;
  padding: 4px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-sizing: border-box;
}

.cu-date-picker__select .days > div > .is-notcur {
  color: var(--cu-text-color-light);
}
.cu-date-picker__select .month,
.cu-date-picker__select .year {
  flex-wrap: wrap;
}
.cu-date-picker__select .month > div,
.cu-date-picker__select .year > div {
  width: 25%;
  height: 60px;
  line-height: 60px;
  text-align: center;
  cursor: pointer;
}

.cu-date-picker__select .content .selected {
  color: var(--cu-color-primary);
}

.cu-date-picker__inner .clearable {
  position: absolute;
  right: 2px;
  top: 50%;
  transform: translateY(-50%);
  cursor: pointer;
}
.cu-date-picker__select .days .selected:not(.is-notcur)::after {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  bottom: 4px;
  transform: translateX(-50%);
  width: 30%;
  height: 2px;
  background-color: var(--cu-color-primary);
}

.cu-date-picker__footer {
  border-top: 1px solid var(--cu-border-color);
  padding: 4px 8px;
  display: flex;
  justify-content: flex-end;
}

.cu-date-table__box {
  padding: 4px;
  display: flex;
}
.cu-date-table__box > div + div {
  border-left: 1px solid var(--cu-border-color);
}

.cu-date-table__box .shortcuts {
  padding: 0 4px;
  width: 80px;
  font-size: 12px;
  line-height: 22px;
  display: flex;
  flex-direction: column;
}
.cu-date-table__box .shortcuts > span:hover {
  color: var(--cu-color-primary);
  cursor: pointer;
}

.cu-date-table__box .time-select {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 4px;
  border-bottom: 1px solid var(--cu-border-color);
}
.cu-date-table__box .time-select > span {
  padding-right: 6px;
}
