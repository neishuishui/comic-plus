import type { ExtractPropTypes } from 'vue';

export const tagProps = {
  type: String,
  mode: {
    type: String,
    validator: (value: string) => ['light', 'plain'].includes(value)
  },
  border: Boolean,
  size: {
    type: Number,
    default: 20
  },
  closable: Boolean,
  transition: Boolean,
  color: String
} as const;
export type TagProps = ExtractPropTypes<typeof tagProps>;

export const tagEmits = {
  close: () => true
};

export type TagEmits = typeof tagEmits;
