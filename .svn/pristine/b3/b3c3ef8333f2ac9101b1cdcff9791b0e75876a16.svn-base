import type { ExtractPropTypes, PropType } from 'vue';
import type { ComicType } from '../../type';

export const pistolProps = {
  trigger: {
    type: String as PropType<'hover' | 'click'>,
    default: 'hover'
  },
  type: String as PropType<ComicType>,
  color: String,
  size: {
    type: Number,
    default: 40
  },
  equal: {
    type: Boolean,
    default: true
  },
  mode: {
    type: String as PropType<'wheel' | 'semi'>,
    default: 'wheel'
  },
  iteration: {
    type: Boolean,
    default: true
  },
  direction: {
    type: String as PropType<'top' | 'left' | 'bottom' | 'right'>,
    default: 'top'
  },
  icon: String,
  shootClose: Boolean
} as const;

export type PistolProps = ExtractPropTypes<typeof pistolProps>;

export const pistolEmits = {
  shoot: (sign: string) => true,
  open: () => true,
  close: () => true
};

export type PistolEmits = typeof pistolEmits;
