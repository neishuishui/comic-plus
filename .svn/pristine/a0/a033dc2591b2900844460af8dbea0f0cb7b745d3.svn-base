.cu-radio {
  display: inline-flex;
  font-size: 14px;
  color: var(--font);
  border-color: var(--border);
  cursor: pointer;
  align-items: center;
  vertical-align: middle;
  --color: var(--active-color, var(--primary));
}

.cu-radio-button {
  border-radius: 4px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  padding: 0 12px;
  border: 1px solid;
  border-color: var(--border);
  cursor: pointer;
  --color: var(--active-color, var(--primary));
  height: 34px;
  line-height: 1;
  transition: all 200ms;
}

.cu-radio-button.small {
  padding: 0 10px;
  height: 30px;
}
.cu-radio-button.mini {
  padding: 0 8px;
  height: 24px;
  font-size: 12px;
}

.cu-radio + .cu-radio,
.cu-radio-button + .cu-radio-button {
  margin-left: 8px;
}

.cu-radio__inner {
  margin-right: 4px;
  display: inline-flex;
  line-height: 1;
  width: 16px;
  height: 16px;
  border: 1px solid;
  border-color: inherit;
  border-radius: 50%;
  position: relative;
}
.cu-radio__inner::after {
  content: '';
  display: block;
  width: 9px;
  height: 9px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  display: none;
}
.cu-radio:not(.is-disabled):hover {
  color: var(--color);
  border-color: var(--color);
}

.cu-radio-button:not(.is-disabled):not(.is-checked):hover {
  color: var(--color);
}
.cu-radio-button.is-disabled,
.cu-radio.is-disabled {
  opacity: 0.6;
  cursor: no-drop;
}

.cu-radio .cu-radio__label {
  color: inherit;
}

.cu-radio input:not(:disabled):active ~ .cu-radio__inner {
  transform: scale(0.9);
}

.cu-radio-button.is-checked,
.cu-radio input:checked ~ .cu-radio__inner {
  border-color: var(--color);
}
.cu-radio-button.is-checked {
  color: #fff;
  background-color: var(--color);
}

.cu-radio input:checked ~ .cu-radio__inner::after {
  background-color: var(--color);
  display: block;
}

.cu-radio input:checked ~ .cu-radio__label {
  color: var(--color);
}

.cu-radio-group {
  display: inline-flex;
  flex-wrap: wrap;
}

.cu-radio-group .cu-radio-button {
  margin-left: 0;
  border-radius: 0;
}

.cu-radio-group .cu-radio-button + .cu-radio-button {
  margin-left: -1px;
}
.cu-radio-group .cu-radio-button:first-child {
  border-radius: 4px 0 0 4px;
}
.cu-radio-group .cu-radio-button:last-child {
  border-radius: 0 4px 4px 0;
}
