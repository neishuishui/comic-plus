.cu-badge {
  position: relative;
  --color: #fff;
  display: inline-flex;
}

.cu-badge__inner {
  border: 1px solid #fff;
  display: inline-block;
  padding: 2px 6px;
  color: #fff;
  background-color: var(--color);
  font-size: 12px;
  line-height: 1;
  border-radius: 10px;
  z-index: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  cursor: default;
}

.cu-badge__inner.position {
  position: absolute;
  right: 10px;
  top: 0;
  transform: translate(100%, -50%);
}
.cu-badge__inner.position.dot {
  padding: 0;
  width: 10px;
  height: 10px;
  right: 5px;
}

.cu-badge.primary {
  --color: var(--primary);
}
.cu-badge.success {
  --color: var(--success);
}
.cu-badge.warning {
  --color: var(--warning);
}
.cu-badge.danger {
  --color: var(--danger);
}
.cu-badge.info {
  --color: var(--info);
}
