.cu-button {
  padding: 0 12px;
  border-radius: var(--cu-border-radius);
  border: 1px solid var(--cu-border-color);
  color: var(--cu-color-text);
  background-color: #fff;
  cursor: pointer;
  height: var(--cu-size-default);
  font-size: 14px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  user-select: none;
  white-space: nowrap;
  --cu-button-border-hover: var(--cu-color-primary);
  --cu-button-background-hover: var(--cu-color-primary);
  --color-hover: #fff;
  transition: all 200ms;
  outline: none;
  position: relative;
  vertical-align: middle;
}

.cu-button.small {
  padding: 0 10px;
  height: var(--cu-size-small);
}
.cu-button.mini {
  padding: 0 8px;
  height: var(--cu-size-mini);
  font-size: 12px;
}

.cu-button.round {
  border-radius: 18px;
}
.cu-button.circle {
  width: var(--cu-size-default);
  padding: 0;
  text-align: center;
  border-radius: 50%;
}

.cu-button.circle.small {
  width: var(--cu-size-small);
}
.cu-button.circle.mini {
  width: var(--cu-size-mini);
}

.cu-button.primary {
  color: #fff;
  background-color: var(--cu-color-primary);
  border-color: var(--cu-color-primary);
  --cu-button-border-hover: var(--cu-color-primary-light);
  --cu-button-background-hover: var(--cu-color-primary-light);
}

.cu-button.success {
  color: #fff;
  background-color: var(--cu-color-success);
  border-color: var(--cu-color-success);
  --cu-button-border-hover: var(--cu-color-success-light);
  --cu-button-background-hover: var(--cu-color-success-light);
}
.cu-button.warning {
  color: #fff;
  background-color: var(--cu-color-warning);
  border-color: var(--cu-color-warning);
  --cu-button-border-hover: var(--cu-color-warning-light);
  --cu-button-background-hover: var(--cu-color-warning-light);
}
.cu-button.danger {
  color: #fff;
  background-color: var(--cu-color-danger);
  border-color: var(--cu-color-danger);
  --cu-button-border-hover: var(--cu-color-danger-light);
  --cu-button-background-hover: var(--cu-color-danger-light);
}

.cu-button.info {
  color: #fff;
  background-color: var(--cu-color-info);
  border-color: var(--cu-color-info);
  --cu-button-border-hover: var(--cu-color-info-light);
  --cu-button-background-hover: var(--cu-color-info-light);
}

.cu-button.is-plain {
  color: var(--cu-color-text);
  --cu-button-background-hover: #fff;
  --color-hover: var(--cu-color-primary);
}

.cu-button.primary.is-plain {
  background-color: #fff;
  color: var(--cu-color-primary);
  --cu-button-background-hover: var(--cu-color-primary-light2);
  --color-hover: var(--cu-color-primary);
}
.cu-button.success.is-plain {
  background-color: #fff;
  color: var(--cu-color-success);
  --cu-button-background-hover: var(--cu-color-success-light2);
  --color-hover: var(--cu-color-success);
}
.cu-button.warning.is-plain {
  background-color: #fff;
  color: var(--cu-color-warning);
  --cu-button-background-hover: var(--cu-color-warning-light2);
  --color-hover: var(--cu-color-warning);
}
.cu-button.danger.is-plain {
  background-color: #fff;
  color: var(--cu-color-danger);
  --cu-button-background-hover: var(--cu-color-danger-light2);
  --color-hover: var(--cu-color-danger);
}
.cu-button.info.is-plain {
  background-color: #fff;
  color: var(--cu-color-info);
  --cu-button-background-hover: var(--cu-color-info-light2);
  --color-hover: var(--cu-color-info);
}

.cu-button[disabled] {
  opacity: 0.6;
  cursor: no-drop;
}

.cu-button:not([disabled]):hover {
  background-color: var(--cu-button-background-hover);
  color: var(--color-hover);
  border-color: var(--cu-button-border-hover);
}

body:not(.comic-plus__is-comic) .cu-button:active:not([disabled]) {
  box-shadow: inset 0 0 0 1px;
}
.cu-button-group .cu-button:first-child {
  border-radius: var(--cu-border-radius) 0 0 var(--cu-border-radius);
}
.cu-button-group .cu-button:last-child {
  border-radius: 0 var(--cu-border-radius) var(--cu-border-radius) 0;
}
.cu-button-group .cu-button {
  border-radius: 0;
}

.cu-button-group.round .cu-button:first-child {
  border-radius: 18px 0 0 18px;
}

.cu-button-group.round .cu-button:last-child {
  border-radius: 0 18px 18px 0;
}

.cu-button-group .cu-button + .cu-button {
  border-left-color: var(--cu-border-color);
  margin-left: -1px;
}
.cu-button-group + .cu-button-group,
.cu-button-group + .cu-button,
.cu-button + .cu-button,
.cu-button + .cu-button-group {
  margin-left: 10px;
}
.cu-button-group {
  display: inline-block;
  vertical-align: middle;
}

.comic-plus__is-comic .cu-button {
  border-color: var(--cu-comic-border-color);
  position: relative;
  --cu-button-border-hover: var(--cu-comic-border-color);
}

.comic-plus__is-comic .cu-button::before {
  position: absolute;
  content: '';
  display: block;
  width: 18px;
  height: 1px;
  background: var(--cu-comic-fill-background);
  top: -1px;
  right: 10%;
  transition: all 200ms;
  box-sizing: border-box;
}

.comic-plus__is-comic .cu-button:active::before {
  transform: scaleX(0);
}

.comic-plus__is-comic .cu-button.round::before {
  right: 20%;
}

.comic-plus__is-comic .cu-button.circle::before {
  right: 40%;
  width: 8px;
}

/* .comic-plus__is-comic .cu-button-group .cu-button::before {
  display: none;
} */

.comic-plus__is-comic .cu-button-group .cu-button + .cu-button {
  border-left-color: var(--cu-comic-border-color);
}
