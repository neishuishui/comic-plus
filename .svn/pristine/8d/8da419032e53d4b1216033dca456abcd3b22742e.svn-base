<template>
  <div class="cu-card" :class="[shadow, { 'turn-card': turnCard }]" @click="showTurn = !showTurn">
    <div class="cu-card__container" :class="[{ turn: !showTurn && turnType === 'click' }, turnType]">
      <slot></slot>
    </div>
    <div class="cu-card__opposite" :class="[{ turn: showTurn && turnType === 'click' }, turnType]" v-if="turnCard">
      <slot name="opposite"></slot>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref } from 'vue';
import '../style/css';
defineOptions({
  name: 'CuCard'
});

defineProps({
  shadow: {
    type: String,
    default: 'always',
    validator: function (value) {
      return ['always', 'hover', 'never'].includes(value);
    }
  },
  turnCard: Boolean,
  turnType: {
    type: String,
    default: 'hover',
    validator: function (value) {
      return [ 'hover', 'click'].includes(value);
    }
  }
});

const showTurn = ref(false);
</script>

<style scoped></style>
