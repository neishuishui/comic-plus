
import { createTitle } from "./src/title";

const useTitle = function (): object {
  return {
    mounted(el: any, binding: any) {
      if (!binding.value) return
      el.instance = createTitle(el, binding.value);
    },
    updated(el: any, binding: any) {
      if (!binding.value) return
      if (el.instance) {
        el.instance.vm.exposed.updateText(binding.value)
      } else {
        el.instance = createTitle(el, binding.value);
      }
    },
    unmounted(el: any) {
      if (el.instance) {
        el.instance.destroy()
        el.instance = null
      }
    }
  }
};

const vTitle = {
  install: function (app: any) {
    app.directive('title', useTitle());
  }
};

export { useTitle, vTitle };
