.cu-radio {
  display: inline-flex;
  font-size: 14px;
  color: var(--cu-color-text);
  border-color: var(--cu-border-color);
  cursor: pointer;
  align-items: center;
  vertical-align: middle;
  --cu-radio-active-color: var(--cu-color-primary);
}

.cu-radio-button {
  border-radius: var(--cu-border-radius);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  padding: 0 12px;
  border: 1px solid;
  border-color: var(--cu-border-color);
  cursor: pointer;
  --cu-radio-active-color: var(--cu-color-primary);
  height: 34px;
  line-height: 1;
  transition: all 200ms;
  position: relative;
  vertical-align: middle;
}

.cu-radio-button.small {
  padding: 0 10px;
  height: 30px;
}
.cu-radio-button.mini {
  padding: 0 8px;
  height: 24px;
  font-size: 12px;
}

.cu-radio + .cu-radio,
.cu-radio-button + .cu-radio-button {
  margin-left: 8px;
}

.cu-radio__inner {
  margin-right: 4px;
  display: inline-flex;
  line-height: 1;
  width: 16px;
  height: 16px;
  border: 1px solid;
  border-color: inherit;
  border-radius: 50%;
  position: relative;
  transition: all 200ms;
}
.cu-radio__inner::after {
  content: '';
  display: block;
  width: 9px;
  height: 9px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  display: none;
}
.cu-radio:not(.is-disabled):hover {
  color: var(--cu-radio-active-color);
  border-color: var(--cu-radio-active-color);
}

.cu-radio-button:not(.is-disabled):not(.is-checked):hover {
  color: var(--cu-radio-active-color);
}
.cu-radio-button.is-disabled,
.cu-radio.is-disabled {
  opacity: 0.6;
  cursor: no-drop;
}

.cu-radio .cu-radio__label {
  color: inherit;
}

.cu-radio input:not(:disabled):active ~ .cu-radio__inner {
  transform: scale(0.9);
}

.cu-radio-button.is-checked,
.cu-radio input:checked ~ .cu-radio__inner {
  border-color: var(--cu-radio-active-color);
}
.cu-radio-button.is-checked {
  color: #fff;
  background-color: var(--cu-radio-active-color);
}

.cu-radio input:checked ~ .cu-radio__inner::after {
  background-color: var(--cu-radio-active-color);
  display: block;
}

.cu-radio input:checked ~ .cu-radio__label {
  color: var(--cu-radio-active-color);
}

.cu-radio-group {
  display: inline-flex;
  flex-wrap: wrap;
  vertical-align: middle;
}

.cu-radio-group .cu-radio-button {
  margin-left: 0;
  border-radius: 0;
}

.cu-radio-group .cu-radio-button + .cu-radio-button {
  margin-left: -1px;
}
.cu-radio-group .cu-radio-button:first-child {
  border-radius: var(--cu-border-radius) 0 0 var(--cu-border-radius);
}
.cu-radio-group .cu-radio-button:last-child {
  border-radius: 0 var(--cu-border-radius) var(--cu-border-radius) 0;
}

.comic-plus__is-comic .cu-radio,
.comic-plus__is-comic .cu-radio-button {
  border-color: var(--cu-comic-border-color);
}

.comic-plus__is-comic .cu-radio-button::before {
  position: absolute;
  content: '';
  display: block;
  width: 18px;
  height: 1px;
  background: var(--cu-comic-fill-background);
  bottom: -1px;
  right: 10%;
  transition: all 200ms;
  box-sizing: border-box;
}
