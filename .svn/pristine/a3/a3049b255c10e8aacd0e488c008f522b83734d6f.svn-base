.cu-image {
  display: inline-block;
  position: relative;
  vertical-align: middle;
}
.cu-image img {
  width: 100%;
  height: 100%;
}

.cu-image .cu-image__loading,
.cu-image .cu-image__error {
  position: absolute;
  inset: 0;
  z-index: 1;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: var(--cu-text-color-light);
  background-color: var(--cu-disabled-background);
}

.cu-image .empty {
  font-size: 1.5rem;
}
