.cu-switch {
  font-size: 14px;
  color: var(--font);
  cursor: pointer;
  display: inline-block;
}
.cu-switch.is-disabled {
  opacity: 0.6;
  cursor: no-drop;
}
.cu-switch > span {
  display: inline-block;
  vertical-align: middle;
  color: inherit;
  font-size: inherit;
}
.cu-switch__inner {
  display: inline-block;
  width: 40px;
  height: 20px;
  /* border: 1px solid var(--border); */
  border-radius: 4px;
  padding: 2px;
  position: relative;
  background-color: var(--unActiveColor, #d7d7d7);
  transition: background-color 200ms;
  /* box-shadow: 0 1px 1px 0 var(--border); */
}
.cu-switch__inner > span {
  position: absolute;
  top: 3px;
  display: block;
  width: 14px;
  height: 14px;
  /* border: inherit; */
  border-radius: inherit;
  background-color: #fff;
  transition: all 200ms;
}
.cu-switch input:disabled ~ .cu-switch__inner > span {
  background-color: var(--disabled-bg);
}
.cu-switch input:not(:disabled):active ~ .cu-switch__inner > span {
  width: calc(100% - 6px);
}

.cu-switch .cu-switch__activetext {
  margin-left: 4px;
}
.cu-switch .cu-switch__unactivetext {
  margin-right: 4px;
  color: var(--activeColor, var(--primary));
}
/* .cu-switch.is-disabled .cu-switch__activetext,
.cu-switch.is-disabled .cu-switch__unactivetext {
  color: var(--disabled-font);
} */

.cu-switch__inner .is-active {
  /* animation: on 200ms ease-in-out forwards; */
  left: auto;
  right: 3px;
  width: 14px;
}
.cu-switch__inner .un-active {
  /* animation: off 200ms ease-in-out forwards; */
  left: 3px;
  right: auto;
  width: 14px;
}

.cu-switch input:checked ~ .cu-switch__inner {
  background-color: var(--activeColor, var(--primary));
}

.cu-switch input:checked ~ .cu-switch__unactivetext {
  color: inherit;
}
.cu-switch input:checked ~ .cu-switch__activetext {
  color: var(--activeColor, var(--primary));
}

.cu-switch + .cu-switch {
  margin-left: 10px;
}
