.cu-image {
  display: inline-block;
  position: relative;
}
.cu-image img {
  width: 100%;
  height: 100%;
}

.cu-image .cu-image__loading,
.cu-image .cu-image__error {
  position: absolute;
  inset: 0;
  z-index: 1;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: var(--font-light);
  background-color: var(--disabled-bg);
}
