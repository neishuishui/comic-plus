import type { ComputedRef, CSSProperties, InjectionKey } from 'vue';
import type { MenuProps } from './main.props';

export type MenuProvide = {
  props: MenuProps;
  style: ComputedRef<CSSProperties>;
  useItemClick: (name: string | number) => void;
};
export type MenuItemInstance = {
  uid: number;
  isActive: ComputedRef<boolean>;
};

export type SubmenuProvide = {
  closeMenu: (deep?:boolean) => void;
  setActive: (item:MenuItemInstance) => void;
  isHorizontal: ComputedRef<boolean>;
};


export const MENU_PROVIDE: InjectionKey<MenuProvide> = Symbol('FORMITEM_PROVIDE');

export const SUBMENU_PROVIDE: InjectionKey<SubmenuProvide> = Symbol('SUBMENU_PROVIDE');
