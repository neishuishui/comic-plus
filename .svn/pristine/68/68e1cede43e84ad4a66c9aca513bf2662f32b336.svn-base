@keyframes on {
  0% {
    left: 1px;
    right: auto;
    width: 14px;
  }
  50% {
    width: calc(100% - 2px);
  }
  100% {
    left: auto;
    right: 1px;
    width: 14px;
  }
}

@keyframes off {
  0% {
    left: auto;
    right: 1px;
    width: 14px;
  }
  50% {
    width: calc(100% - 2px);
  }
  100% {
    left: 1px;
    right: auto;
    width: 14px;
  }
}
.cu-switch {
  font-size: 14px;
  color: var(--font);
  cursor: pointer;
}
.cu-switch.is-disabled {
  cursor: no-drop;
}
.cu-switch > span {
  display: inline-block;
  vertical-align: middle;
  color: inherit;
  font-size: inherit;
}
.cu-switch__inner {
  display: inline-block;
  width: 40px;
  height: 20px;
  border: 2px solid var(--border);
  border-radius: 4px;
  padding: 1px;
  position: relative;
  background-color: var(--unActiveColor, #fff);
  transition: background-color 200ms;
  box-shadow: 0 1px 1px 0 var(--border);
}
.cu-switch__inner > span {
  position: absolute;
  top: 1px;
  display: block;
  width: 14px;
  height: 14px;
  border: inherit;
  border-radius: inherit;
  background-color: #fff;
  transition: all 200ms;
}
.cu-switch input:disabled ~ .cu-switch__inner {
  background-color: var(--disabled-bg);
  border-color: var(--disabled-font);
  box-shadow: none;
  color: var(--disabled-font);
}
.cu-switch input:disabled ~ .cu-switch__inner > span {
  background-color: var(--disabled-bg);
}
.cu-switch input:not(:disabled):active ~ .cu-switch__inner > span {
  width: calc(100% - 2px);
}

.cu-switch .cu-switch__activetext {
  margin-left: 4px;
}
.cu-switch .cu-switch__unactivetext {
  margin-right: 4px;
  color: var(--activeColor, var(--primary));
}
.cu-switch.is-disabled .cu-switch__activetext,
.cu-switch.is-disabled .cu-switch__unactivetext {
  color: var(--disabled-font);
}

.cu-switch__inner .is-active {
  /* animation: on 200ms ease-in-out forwards; */
  left: auto;
  right: 1px;
  width: 14px;
}
.cu-switch__inner .un-active {
  /* animation: off 200ms ease-in-out forwards; */
  left: 1px;
  right: auto;
  width: 14px;
}

.cu-switch input:not(:disabled):checked ~ .cu-switch__inner {
  background-color: var(--activeColor, var(--primary));
}

.cu-switch input:not(:disabled):checked ~ .cu-switch__unactivetext {
  color: inherit;
}
.cu-switch input:not(:disabled):checked ~ .cu-switch__activetext {
  color: var(--activeColor, var(--primary));
}

.cu-switch + .cu-switch {
  margin-left: 10px;
}
