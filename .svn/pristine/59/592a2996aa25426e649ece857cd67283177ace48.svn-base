.cu-tag,
.cu-tag-complex {
  padding: 0 8px;
  border-radius: var(--cu-border-radius);
  color: var(--cu-color-text);
  line-height: 1em;
  font-size: 12px;
  height: 20px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  /* position: relative; */
  background-color: #f0f0f0;
  cursor: default;
  white-space: nowrap;
  vertical-align: middle;
}

.cu-tag-complex {
  padding: 0;
  background-color: transparent;
  border: 1px solid var(--cu-border-color);
}
.cu-tag-complex .complex-content {
  background-color: #b7b7b7;
  padding: 0 4px;
  color: #fff;
}
.cu-tag-complex .cu-tag-content {
  padding: 0 8px;
}

.cu-tag-complex .cu-tag-content,
.cu-tag-complex .complex-content {
  height: 100%;
  display: inline-flex;
  align-items: center;
}

.cu-tag .closeicon,
.cu-tag-complex .closeicon {
  margin-left: 4px;
  background-color: #fff;
  border-radius: 2px;
  cursor: pointer;
  width: 12px;
  height: 12px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 100ms;
  position: relative;
  color: var(--cu-color-text);
}

.cu-tag.mode-light {
  background-color: var(--cu-color-info-light2);
}

.cu-tag.mode-plain {
  background-color: transparent !important;
}

.cu-tag.is-border {
  border: 1px solid var(--cu-border-color);
}

.cu-tag.cu-tag--primary {
  background-color: var(--cu-color-primary);
  border-color: var(--cu-color-primary);
  color: #fff;
}
.cu-tag.cu-tag--success {
  background-color: var(--cu-color-success);
  border-color: var(--cu-color-success);
  color: #fff;
}
.cu-tag.cu-tag--warning {
  background-color: var(--cu-color-warning);
  border-color: var(--cu-color-warning);
  color: #fff;
}
.cu-tag.cu-tag--danger {
  background-color: var(--cu-color-danger);
  border-color: var(--cu-color-danger);
  color: #fff;
}
.cu-tag.cu-tag--info {
  background-color: var(--cu-color-info);
  border-color: var(--cu-color-info);
  color: #fff;
}

.cu-tag.cu-tag--primary.mode-light {
  background-color: var(--cu-color-primary-light2);
  color: var(--cu-color-primary);
  border-color: var(--cu-color-primary);
}
.cu-tag.cu-tag--success.mode-light {
  background-color: var(--cu-color-success-light2);
  color: var(--cu-color-success);
  border-color: var(--cu-color-success);
}
.cu-tag.cu-tag--warning.mode-light {
  background-color: var(--cu-color-warning-light2);
  color: var(--cu-color-warning);
  border-color: var(--cu-color-warning);
}
.cu-tag.cu-tag--danger.mode-light {
  background-color: var(--cu-color-danger-light2);
  color: var(--cu-color-danger);
  border-color: var(--cu-color-danger);
}
.cu-tag.cu-tag--info.mode-light {
  background-color: var(--cu-color-info-light2);
  color: var(--cu-color-info);
  border-color: var(--cu-color-info);
}

.cu-tag.cu-tag--primary.mode-plain {
  border-color: var(--cu-color-primary);
  color: var(--cu-color-primary);
}
.cu-tag.cu-tag--success.mode-plain {
  border-color: var(--cu-color-success);
  color: var(--cu-color-success);
}
.cu-tag.cu-tag--warning.mode-plain {
  border-color: var(--cu-color-warning);
  color: var(--cu-color-warning);
}
.cu-tag.cu-tag--danger.mode-plain {
  background-color: #fff;
  border-color: var(--cu-color-danger);
  color: var(--cu-color-danger);
}
.cu-tag.cu-tag--info.mode-plain {
  border-color: var(--cu-color-info);
  color: var(--cu-color-info);
}

.cu-tag-complex.cu-tag--primary {
  border-color: var(--cu-color-primary);
}
.cu-tag-complex.cu-tag--success {
  border-color: var(--cu-color-success);
}

.cu-tag-complex.cu-tag--warning {
  border-color: var(--cu-color-warning);
}

.cu-tag-complex.cu-tag--danger {
  border-color: var(--cu-color-danger);
}

.cu-tag-complex.cu-tag--info {
  border-color: var(--cu-color-info);
}

.cu-tag-complex.cu-tag--primary .complex-content {
  background-color: var(--cu-color-primary);
}
.cu-tag-complex.cu-tag--success .complex-content {
  background-color: var(--cu-color-success);
}

.cu-tag-complex.cu-tag--warning .complex-content {
  background-color: var(--cu-color-warning);
}

.cu-tag-complex.cu-tag--danger .complex-content {
  background-color: var(--cu-color-danger);
}

.cu-tag-complex.cu-tag--info .complex-content {
  background-color: var(--cu-color-info);
}

.cu-tag.mode-plain .closeicon,
.cu-tag.mode-light .closeicon {
  border: none;
  color: inherit;
  background-color: inherit;
}

.cu-tag + .cu-tag,
.cu-tag + .cu-tag-complex,
.cu-tag-complex + .cu-tag,
.cu-tag-complex + .cu-tag-complex {
  margin-left: 10px;
}

.comic-plus__is-comic .cu-tag.is-border,
.comic-plus__is-comic .cu-tag-complex {
  border-color: var(--cu-comic-border-color);
}

.comic-plus__is-comic .cu-tag::after {
  position: absolute;
  content: '';
  right: 2px;
  top: 2px;
  width: 4px;
  height: 4px;
  display: block;
  background-color: #fff;
  border-radius: 4px;
}

.comic-plus__is-comic .cu-tag.is-border::before,
.comic-plus__is-comic .cu-tag-complex::before {
  position: absolute;
  content: '';
  display: block;
  width: 8px;
  height: 1px;
  background: var(--cu-comic-fill-background-color);
  top: -1px;
  left: 4px;
  transition: all 200ms;
  box-sizing: border-box;
}
