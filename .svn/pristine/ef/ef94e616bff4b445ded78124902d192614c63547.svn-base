import type { ExtractPropTypes, PropType } from "vue";

export const avatarGroupProps = {
  urls: Array as PropType<string[]>,
  fit: {
    type: String,
    default: 'cover'
  },
  size: {
    type: Number,
    default: 40
  },
  shape: {
    type: String,
    default: 'circle',
    validator: (value: string) => ['circle', 'square'].includes(value)
  },
  offset: Number,
  shadow: Boolean,
  maxCount: {
    type: Number,
    default: 5
  },
  clickShowAll: Boolean
} as const

export type AvatarGroupProps = ExtractPropTypes<typeof avatarGroupProps>


export const avatarGroupEmits = {
  unfold: () => true,
  tuck: () => true
}

export type AvatarGroupEmits = typeof avatarGroupEmits