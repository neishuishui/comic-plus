
import { inject } from 'vue';
interface comic {
  size?: string,
  zIndex?: number,
  color?: object
}
export function useConfig() {

  const $COMIC = inject<comic | null>('$COMIC', null);
  if (!$COMIC) {
    return {
      SIZE: null,
      Z_INDEX: 2000,
      THEME: '#e4acc7'
    }
  }

  return {
    SIZE: $COMIC.size,
    Z_INDEX: $COMIC.zIndex,
    THEME: $COMIC.color?.primary
  }

}