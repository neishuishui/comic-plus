<template>
  <div class="cu-breadcrumb" :class="{ background, closeboth }" :style="{ '--color': color || undefined }">
    <slot></slot>
  </div>
</template>

<script setup lang="ts">
import { provide, computed } from 'vue';
import { breadcrumbProps } from './main.props';
import '../style/css';
defineOptions({
  name: 'CuBreadcrumb'
});

const props = defineProps(breadcrumbProps);

const provideSeparator = computed(() => props.separator);
const provideSeparatorIcon = computed(() => props.separatorIcon);
const provideBackground = computed(() => props.background);

provide('breadcrumb:separator', provideSeparator);
provide('breadcrumb:separatorIcon', provideSeparatorIcon);
provide('breadcrumb:background', provideBackground);
</script>
