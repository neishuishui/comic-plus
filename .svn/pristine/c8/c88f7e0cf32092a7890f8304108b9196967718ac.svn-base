.cu-tag {
  padding: 0 8px;
  border-radius: var(--border-radius-base);
  color: var(--font);
  line-height: 1em;
  font-size: 12px;
  height: 20px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background-color: #f0f0f0;
  cursor: default;
  white-space: nowrap;
  --icon-bg: var(--font);
}

.cu-tag .closeicon {
  margin-left: 4px;
  background-color: #fff;
  border-radius: 2px;
  cursor: pointer;
  width: 12px;
  height: 12px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 100ms;
  position: relative;
}

.cu-tag .closeicon::after,
.cu-tag .closeicon::before {
  position: absolute;
  content: '';
  display: block;
  width: 80%;
  height: 1px;
  background-color: var(--icon-bg);
  transform-origin: center center;
}

.cu-tag .closeicon::before {
  transform: rotate(45deg);
}
.cu-tag .closeicon::after {
  transform: rotate(-45deg);
}

.cu-tag.light {
  background-color: var(--info-light2);
}

.cu-tag.plain {
  background-color: transparent !important;
}

.cu-tag.border {
  border: 1px solid var(--border);
}

.cu-tag.cu-tag--primary {
  background-color: var(--primary);
  border-color: var(--primary);
  color: #fff;
}
.cu-tag.cu-tag--success {
  background-color: var(--success);
  border-color: var(--success);
  color: #fff;
}
.cu-tag.cu-tag--warning {
  background-color: var(--warning);
  border-color: var(--warning);
  color: #fff;
}
.cu-tag.cu-tag--danger {
  background-color: var(--danger);
  border-color: var(--danger);
  color: #fff;
}
.cu-tag.cu-tag--info {
  background-color: var(--info);
  border-color: var(--info);
  color: #fff;
}

.cu-tag.cu-tag--primary.light {
  background-color: var(--primary-light2);
  color: var(--primary);
  border-color: var(--primary);
  --icon-bg: var(--primary);
}
.cu-tag.cu-tag--success.light {
  background-color: var(--success-light2);
  color: var(--success);
  border-color: var(--success);
  --icon-bg: var(--success);
}
.cu-tag.cu-tag--warning.light {
  background-color: var(--warning-light2);
  color: var(--warning);
  border-color: var(--warning);
  --icon-bg: var(--warning);
}
.cu-tag.cu-tag--danger.light {
  background-color: var(--danger-light2);
  color: var(--danger);
  border-color: var(--danger);
  --icon-bg: var(--danger);
}
.cu-tag.cu-tag--info.light {
  background-color: var(--info-light2);
  color: var(--info);
  border-color: var(--info);
  --icon-bg: var(--info);
}

.cu-tag.cu-tag--primary.plain {
  border-color: var(--primary);
  color: var(--primary);
  --icon-bg: var(--primary);
}
.cu-tag.cu-tag--success.plain {
  border-color: var(--success);
  color: var(--success);
  --icon-bg: var(--success);
}
.cu-tag.cu-tag--warning.plain {
  border-color: var(--warning);
  color: var(--warning);
  --icon-bg: var(--warning);
}
.cu-tag.cu-tag--danger.plain {
  background-color: #fff;
  border-color: var(--danger);
  color: var(--danger);
  --icon-bg: var(--danger);
}
.cu-tag.cu-tag--info.plain {
  border-color: var(--info);
  color: var(--info);
  --icon-bg: var(--info);
}

.cu-tag.light .closeicon {
  border: none;
  color: inherit;
  background-color: inherit;
}

.cu-tag + .cu-tag {
  margin-left: 10px;
}
