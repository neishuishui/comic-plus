.cu-textarea {
  color: var(--font);
  overflow: hidden;
  position: relative;
  font-size: 13px;
  border-color: var(--input-border);
}
.cu-textarea textarea {
  outline: none;
  padding: 4px 8px;
  width: 100%;
  border: 1px solid;
  border-color: inherit;
  border-radius: 4px;
  font-size: inherit;
  color: inherit;
  resize: vertical;
  cursor: inherit;
  min-height: 28px;
}
.cu-textarea.is-disabled {
  cursor: no-drop;
}
.cu-textarea.is-disabled textarea {
  resize: none;
}

.cu-textarea textarea::placeholder {
  color: var(--font-light2);
}

.cu-textarea .cu-textarea__maxlength {
  position: absolute;
  right: 10px;
  bottom: 5px;
  font-size: 12px;
  color: var(--font-light);
  user-select: none;
  background-color: #fff;
}
.cu-textarea.is-disabled .cu-textarea__maxlength {
  background-color: var(--disabled-bg);
}

.cu-textarea .cu-textarea__text {
  padding: 5px 9px;
  font-size: inherit;
  position: absolute;
  z-index: -99999;
}
