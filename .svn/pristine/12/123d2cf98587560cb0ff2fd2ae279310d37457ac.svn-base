.cu-link {
  color: var(--font);
  text-decoration: none;
  cursor: pointer;
  font-size: 14px;
}
.cu-link.underline {
  text-decoration: underline;
}

.cu-link:not([disabled='true']):hover {
  text-shadow: 0 0 2px;
}

.cu-link.cu-link--primary {
  color: var(--primary);
}

.cu-link.cu-link--success {
  color: var(--success);
}
.cu-link.cu-link--danger {
  color: var(--danger);
}
.cu-link.cu-link--warning {
  color: var(--warning);
}
.cu-link + .cu-link {
  margin-left: 10px;
}

.cu-link[disabled='true'] {
  opacity: 0.5;
  cursor: no-drop;
}
