.cu-breadcrumb {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: var(--cu-text-color);
  cursor: default;
}

.cu-breadcrumb-item {
  display: inline-flex;
  align-items: center;
}

.cu-breadcrumb:not(.background) .cu-breadcrumb__text {
  color: var(--cu-text-color-light);
}

.cu-breadcrumb-item a,
.cu-breadcrumb:not(.background) .cu-breadcrumb-item .link {
  cursor: pointer;
  transition: color 200ms;
  color: var(--cu-text-color);
  text-decoration: none;
}

.cu-breadcrumb:not(.background) .cu-breadcrumb-item:hover a,
.cu-breadcrumb:not(.background) .cu-breadcrumb-item:hover .link,
.cu-breadcrumb:not(.background) .cu-breadcrumb-item .active {
  color: var(--color, var(--cu-color-primary));
}

.cu-breadcrumb.background .cu-breadcrumb-item:hover,
.cu-breadcrumb.background .cu-breadcrumb-item .active {
  transition: opacity 200ms;
  opacity: 0.8;
}

.cu-breadcrumb-item .cu-breadcrumb__separator {
  margin: 0 4px;
  display: inline-flex;
  color: var(--cu-text-color-light);
}

.cu-breadcrumb-item:last-child .cu-breadcrumb__separator {
  display: none;
}

.cu-breadcrumb.background .cu-breadcrumb-item {
  min-width: 50px;
  display: inline-flex;
  justify-content: center;
  background-color: var(--color, var(--cu-border-color));
  border-radius: 4px;
  padding: 4px 10px 4px 15px;
  -webkit-clip-path: polygon(calc(100% - 10px) 0, 100% 50%, calc(100% - 10px) 100%, 0% 100%, 10px 50%, 0% 0%);
  clip-path: polygon(calc(100% - 10px) 0, 100% 50%, calc(100% - 10px) 100%, 0% 100%, 10px 50%, 0% 0%);
}

.cu-breadcrumb.closeboth.background .cu-breadcrumb-item:first-child {
  padding: 4px 15px 4px 10px;
  -webkit-clip-path: polygon(calc(100% - 10px) 0, 100% 50%, calc(100% - 10px) 100%, 0% 100%, 0% 50%, 0% 0%);
  clip-path: polygon(calc(100% - 10px) 0, 100% 50%, calc(100% - 10px) 100%, 0% 100%, 0 50%, 0% 0%);
}

.cu-breadcrumb.closeboth.background .cu-breadcrumb-item:last-child {
  -webkit-clip-path: polygon(calc(100%) 0, 100% 50%, calc(100%) 100%, 0% 100%, 10px 50%, 0% 0%);
  clip-path: polygon(calc(100%) 0, 100% 50%, calc(100%) 100%, 0% 100%, 10px 50%, 0% 0%);
}
