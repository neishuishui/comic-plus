.cu-step {
  display: flex;
  color: var(--font-light);
  font-size: 14px;
  overflow-y: hidden;
  overflow-x: auto;
}
.cu-step.vertical {
  display: block;
  flex-direction: column;
  overflow-x: hidden;
  overflow-y: auto;
  max-width: 100%;
  width: fit-content;
}

.cu-step-item {
  /* padding: 0 40px; */
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
  min-width: 120px;
  flex: 1;
  flex-shrink: 0;

  color: var(--font-light);
}
.cu-step.vertical .cu-step-item {
  flex-direction: row;
  min-height: 120px;
  width: 100%;
}

.cu-step.center .cu-step-item {
  align-items: center;
  text-align: center;
}

.cu-step-item > div {
  background-color: #fff;
}

.step-item__head {
  padding: 0 6px;
  line-height: 20px;
  height: 20px;
  width: fit-content;
}

.cu-step-item .step-item__head::after {
  position: absolute;
  content: '';
  display: block;
  left: 0;
  width: 100%;
  top: 10px;
  height: 2px;
  background-color: var(--font-light);
  z-index: -1;
}

.cu-step.vertical .cu-step-item .step-item__head {
  width: 20px;
  padding: 0;
  text-align: center;
  flex-shrink: 0;
}

.cu-step.vertical .cu-step-item .step-item__head::after {
  width: 2px;
  height: 100%;
  top: 0;
  left: 10px;
}

.cu-step.center .step-item__head::after {
  left: 50%;
}

.cu-step-item.finish {
  color: var(--active-color, var(--primary));
}
.cu-step-item.active {
  color: var(--font);
}
.cu-step-item.active .step-item__head {
  color: var(--active-color, var(--primary));
}

.cu-step-item.error {
  color: var(--danger);
}

.cu-step-item.finish .step-item__head::after {
  background-color: var(--active-color, var(--primary));
}

.step-item__head [class^='cu-icon'] {
  font-size: 18px;
}

.cu-step-item:last-child .step-item__head::after {
  display: none;
}

.cu-step-item .step-item__title {
  padding: 0 6px;
}

.cu-step-item .step-item__content {
  padding: 0 6px;
  font-size: 12px;
}

.cu-step-card {
  position: relative;
  margin-right: 20px;
  padding: 4px;
  display: inline-flex;
  flex-direction: column;
  min-width: 120px;
  flex: 1 1 0;
  color: var(--font-light);
  border: 1px solid var(--border);
  border-radius: 4px;
}

.cu-step.vertical .cu-step-card {
  margin-right: 0;
  margin-bottom: 20px;
  display: block;
}

.cu-step-card:last-child {
  margin-right: 0;
}
.cu-step.vertical .cu-step-card:last-child {
  margin-bottom: 0;
}

.cu-step.center .cu-step-card,
.cu-step.center .cu-step-card .step-item__title {
  text-align: center;
  justify-content: center;
}

.cu-step-card .step-item__title {
  display: flex;
  align-items: center;
}

.cu-step-card .step-item__content {
  flex: 1;
}

.cu-step-card.finish {
  border-color: var(--active-color, var(--primary));
  color: var(--active-color, var(--primary));
}

.cu-step-card.active {
  border-color: var(--font);
  color: var(--font);
}

.cu-step-card.error {
  border-color: var(--danger);
  color: var(--danger);
}

.cu-step-card .card-bridge {
  position: absolute;
  right: -20px;
  width: 20px;
  height: 20px;
  top: 50%;
  transform: translate(0%, -50%);
  font-size: 20px;
  line-height: 1;
}

.cu-step-card:last-child .card-bridge {
  display: none;
}

.cu-step.vertical .cu-step-card .card-bridge {
  right: 50%;
  top: 100%;
  transform: translate(50%, 0);
}

.cu-step-card .step-item__icon {
  margin-right: 4px;
}
