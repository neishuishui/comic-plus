<template>
  <teleport to="body">
    <transition name="cu-fade">
      <div v-if="show" class="cu-backtop" :style="style" @click="backTop">
        <slot>
          <div class="cu-backtop__container">
            <i class="cu-icon-up-filled"></i>
          </div>
        </slot>
      </div>
    </transition>
  </teleport>
</template>

<script setup lang="ts">
import { computed, ref, onMounted } from 'vue';
import { useEventListener } from '@vueuse/core';
import '../style/backtop.css';
import { getMaxZIndex } from '../../../utils';
import { backtopProps } from './main.props';

defineOptions({
  name: 'CuBacktop'
});

const props = defineProps(backtopProps);

const targetDom = ref<any>(null);
const show = ref<boolean>(false);

const style = computed(() => {
  return {
    '--size': props.size,
    zIndex: getMaxZIndex(),
    right: props.right,
    bottom: props.bottom
  };
});

function backTop() {
  targetDom?.value?.scrollTo({
    top: 0,
    behavior: 'smooth'
  });
}

function onScroll(e: any) {
  let top = (e.target as HTMLElement).scrollTop || e.target?.scrollingElement?.scrollTop;
  show.value = top >= props.visibleHeight;
}

onMounted(() => {
  targetDom.value = document.querySelector(props.target!) ?? window;
  if (targetDom.value) {
    useEventListener(targetDom.value, 'scroll', onScroll);
  }
});
</script>
