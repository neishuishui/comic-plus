<template>
  <span class="cu-divider" :class="[direction, type]" :style="computedStyle">
    <span v-if="$slots.default && direction === 'horizontal'">
      <slot></slot>
    </span>
  </span>
</template>

<script setup lang="ts">
import { ref, computed } from 'vue';
import '../style/css';
import { dividerProps, POSITION_ENUM } from './main.props';

defineOptions({
  name: 'CuDivider'
});
const props = defineProps(dividerProps);

const computedStyle = computed(() => {
  return {
    backgroundColor: props.color,
    [props.direction === 'horizontal' ? 'height' : 'width']: props.thickness + 'px',
    justifyContent: POSITION_ENUM[props.contentPosition]
  };
});
</script>
