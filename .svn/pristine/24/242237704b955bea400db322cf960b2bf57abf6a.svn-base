<template>
  <transition name="cu-fade-notice" @after-leave="close">
    <span class="cu-notice" :class="type" v-if="show" :style="{ backgroundColor: color }">
      <i :class="icon" class="prefix-icon"></i>
      <span>
        {{ message }}
      </span>
      <i class="cu-icon-close-c" v-if="showClose" @click="closeMessage"></i>
    </span>
  </transition>
</template>

<script setup lang="ts">
import { ref, onMounted } from 'vue';
import '../../style/css';
defineOptions({
  name: 'CuMessage'
});
const props = defineProps({
  type: String,
  message: String,
  icon: String,
  color: String,
  showClose: Boolean,
  duration: {
    type: Number,
    default: 3000
  },
  close: Function
});
const show = ref(false);
const timer: any = ref(null);

function closeMessage() {
  show.value = false;
  if (timer.value) {
    clearTimeout(timer.value);
    timer.value = null;
  }
}
onMounted(() => {
  show.value = true;
  if (props.duration === -1) return;
  timer.value = setTimeout(() => {
    closeMessage();
  }, props.duration);
});
</script>
