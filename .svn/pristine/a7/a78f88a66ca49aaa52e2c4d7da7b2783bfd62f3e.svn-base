.cu-switch {
  font-size: 14px;
  color: var(--cu-text-color);
  cursor: pointer;
  display: inline-flex;
  vertical-align: middle;
}
.cu-switch.is-disabled {
  opacity: 0.6;
  cursor: no-drop;
}
.cu-switch > span {
  display: inline-block;
  vertical-align: middle;
  color: inherit;
  font-size: inherit;
}
.cu-switch__inner {
  display: inline-block;
  width: 40px;
  height: 20px;
  border: 1px solid transparent;
  /* border-radius: var(--cu-border-radius); */
  border-radius: 10px;
  padding: 1px;
  position: relative;
  background-color: var(--un-active-color, #dcdfe6);
  transition: background-color 200ms;
}
.cu-switch__inner > span {
  position: absolute;
  top: 1px;
  display: block;
  width: 16px;
  height: 16px;
  border: inherit;
  border-radius: inherit;
  background-color: #fff;
  transition: all 200ms;
}
.cu-switch.square .cu-switch__inner {
  border-radius: var(--cu-border-radius);
}

.cu-switch input:disabled ~ .cu-switch__inner > span {
  background-color: var(--cu-disabled-background);
}
.cu-switch input:not(:disabled):active ~ .cu-switch__inner > span {
  width: calc(100% - 4px);
}

.cu-switch .cu-switch__activetext {
  margin-left: 4px;
}
.cu-switch .cu-switch__unactivetext {
  margin-right: 4px;
  color: var(--active-color, var(--cu-color-primary));
}

.cu-switch__inner .is-active {
  left: auto;
  right: 2px;
}
.cu-switch__inner .un-active {
  left: 2px;
  right: auto;
}

.cu-switch input:checked ~ .cu-switch__inner {
  background-color: var(--active-color, var(--cu-color-primary));
}

.cu-switch input:checked ~ .cu-switch__unactivetext {
  color: inherit;
}
.cu-switch input:checked ~ .cu-switch__activetext {
  color: var(--active-color, var(--cu-color-primary));
}

.cu-switch + .cu-switch {
  margin-left: 10px;
}

.comic-plus__is-comic .cu-switch .cu-switch__inner {
  border-color: var(--cu-comic-border-color);
}

.comic-plus__is-comic .cu-switch .cu-switch__inner::after {
  position: absolute;
  content: '';
  display: block;
  width: 12px;
  height: 1px;
  background: var(--cu-comic-fill-background);
  top: -1px;
  right: 10px;
  transition: all 200ms;
  box-sizing: border-box;
}
