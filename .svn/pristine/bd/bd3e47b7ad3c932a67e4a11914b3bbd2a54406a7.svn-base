.cu-collapse {
  display: block;
  width: 100%;
  font-size: 14px;
}
.cu-collapse-item .cu-collapse-item__head {
  padding: 8px;
  width: 100%;
  display: flex;
  align-items: center;
  cursor: pointer;
}
.cu-collapse-item .cu-collapse-item__line {
  flex: 1;
  margin: 0 8px;
  height: 0;
  border-top: 2px dashed var(--border);
}

.cu-collapse-item .cu-icon-right {
  border-radius: 50%;
  border: 2px solid var(--border);
  transition: transform 200ms;
}
.cu-collapse-item .cu-icon-right.active {
  transform: rotate(90deg);
}

.cu-collapse-item .cu-collapse-item__content {
  padding: 0 8px;
  overflow-y: auto;
  font-size: 13px;
}

.cu-collapse.background .cu-collapse-item {
  border: 2px solid var(--border);
  background-color: var(--primary);
  border-radius: 4px;
  padding: 0 10px;
}
.cu-collapse.background .cu-collapse-item__line {
  border: none;
}
.cu-collapse.background .cu-collapse-item .cu-collapse-item__content {
  margin-bottom: 8px;
}
.cu-collapse.background .cu-collapse-item + .cu-collapse-item {
  margin-top: 10px;
}
